
<h1 class="text-2xl font-bold text-gray-800 dark:text-white mb-6">Dashboard</h1>

<% if current_user.has_role?("SuperAdmin") %>
<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
  <!-- Total Users -->
  <div class="bg-white dark:bg-gray-800 shadow-sm rounded-lg p-6 border border-gray-100 dark:border-gray-700 transition-all hover:shadow-md">
    <div class="flex items-center justify-between">
      <h2 class="text-gray-500 dark:text-gray-400 text-sm font-medium">Total Users</h2>
      <span class="p-2 bg-blue-100 dark:bg-blue-900 rounded-full">
        <svg class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
        </svg>
      </span>
    </div>
    <p class="text-3xl font-bold text-gray-900 dark:text-white mt-2"><%= @total_users %></p>
  </div>

  <!-- Total Categories -->
  <div class="bg-white dark:bg-gray-800 shadow-sm rounded-lg p-6 border border-gray-100 dark:border-gray-700 transition-all hover:shadow-md">
    <div class="flex items-center justify-between">
      <h2 class="text-gray-500 dark:text-gray-400 text-sm font-medium">Total Categories</h2>
      <span class="p-2 bg-indigo-100 dark:bg-indigo-900 rounded-full">
        <svg class="w-5 h-5 text-indigo-600 dark:text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
        </svg>
      </span>
    </div>
    <p class="text-3xl font-bold text-gray-900 dark:text-white mt-2"><%= @total_categories %></p>
  </div>
</div>

<div class="grid grid-cols-1 gap-6">
  <div class="bg-white dark:bg-gray-800 shadow-sm rounded-lg p-6 border border-gray-100 dark:border-gray-700">
    <h2 class="text-lg font-medium text-gray-800 dark:text-white mb-4">Users Over Time</h2>
    <div class="h-64">
      <%= line_chart @users_by_day, colors: ["#3b82f6"], points: true, library: { plugins: { legend: { display: false } } } %>
    </div>
  </div>

  <div class="bg-white dark:bg-gray-800 shadow-sm rounded-lg p-6 border border-gray-100 dark:border-gray-700 mt-6">
    <h2 class="text-lg font-medium text-gray-800 dark:text-white mb-4">Categories Over Time</h2>
    <div class="h-64">
      <%= line_chart @categories_by_day, colors: ["#6366f1"], points: true, library: { plugins: { legend: { display: false } } } %>
    </div>
  </div>
</div>
<% end %>


