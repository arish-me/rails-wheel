<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Job Board Providers</h1>
        <p class="mt-2 text-gray-600">Manage available job board providers for integrations</p>
      </div>
      <div class="flex space-x-3">
        <%= link_to new_platform_job_board_provider_path,
            class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          Add Provider
        <% end %>
      </div>
    </div>
  </div>

  <% if @job_board_providers.any? %>
    <div class="bg-white shadow overflow-hidden sm:rounded-md">
      <ul class="divide-y divide-gray-200">
        <% @job_board_providers.each do |provider| %>
          <li>
            <div class="px-4 py-4 sm:px-6">
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <div class="h-10 w-10 rounded-full bg-indigo-100 flex items-center justify-center">
                      <svg class="h-6 w-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9"></path>
                      </svg>
                    </div>
                  </div>
                  <div class="ml-4">
                    <div class="flex items-center">
                      <h3 class="text-lg font-medium text-gray-900">
                        <%= link_to provider.name, platform_job_board_provider_path(provider), class: "hover:text-indigo-600" %>
                      </h3>
                      <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= provider.active? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                        <%= provider.status.humanize %>
                      </span>
                    </div>
                    <div class="mt-1 flex items-center text-sm text-gray-500">
                      <span>Slug: <%= provider.slug %></span>
                      <span class="mx-2">•</span>
                      <span>Auth: <%= provider.auth_type&.humanize %></span>
                      <% if provider.api_documentation_url.present? %>
                        <span class="mx-2">•</span>
                        <%= link_to "Documentation", provider.api_documentation_url, target: "_blank", class: "text-indigo-600 hover:text-indigo-500" %>
                      <% end %>
                    </div>
                    <% if provider.description.present? %>
                      <p class="mt-1 text-sm text-gray-600"><%= provider.description %></p>
                    <% end %>
                  </div>
                </div>
                <div class="flex items-center space-x-3">
                  <%= link_to "View", platform_job_board_provider_path(provider),
                      class: "inline-flex items-center px-3 py-1 border border-transparent text-sm font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
                  <%= link_to "Edit", edit_platform_job_board_provider_path(provider),
                      class: "inline-flex items-center px-3 py-1 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
                </div>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  <% else %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9"></path>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No providers</h3>
      <p class="mt-1 text-sm text-gray-500">Get started by creating your first job board provider.</p>
      <div class="mt-6">
        <%= link_to new_platform_job_board_provider_path,
            class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          Add Provider
        <% end %>
      </div>
    </div>
  <% end %>
</div>
