<span class="flex items-center gap-2">
            <span class="text-gray-400"><%= topic.position %>.</span>
            <span class="font-semibold"><%= topic.heading %></span>
          </span>
          <span class="flex items-end gap-2">
            <%= link_to new_course_topic_chapter_path(@course, topic),
                            class: "dark:text-white hover:underline " do %>
              <%= lucide_icon('plus', class: "w-5 h-5") %>
            <% end %>
            <%= link_to edit_course_topic_path(@course, topic),
                            data: { turbo_frame: :modal },
                            class: "dark:text-white hover:underline " do %>
              <%= lucide_icon('square-pen', class: "w-5 h-5") %>
            <% end %>
            <%= lucide_icon('chevron-up', class: "w-3 h-3 rotate-180 shrink-0") %>
          </span>