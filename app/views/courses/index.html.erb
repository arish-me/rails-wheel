<div class="space-y-4">
  <h1 class="text-xl dark:text-white">Courses</h1>
  <header class="flex justify-between items-center items-center text-gray-900 font-medium">
    <div class="flex">
      <%= render partial: "shared/common/search_bar", locals: { resource_path: courses_path, resource_id: 'courses-search', placeholder: 'Search courses by name' } %>
    </div>
    <div class="flex">
        <%= link_to new_course_path, class: "rounded-lg btn btn--primary text-white flex items-center gap-1 justify-center px-3 py-2", data: { turbo_frame: :modal } do %>
          <%= lucide_icon("plus", class: "w-5 h-5") %>
          <p class="text-sm font-medium">New Course</p>
        <% end %>

    </div>
  </header>
</div>

<!-- app/views/courses/index.html.erb -->
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 p-6">
  <% @courses.each do |course| %>
    <div class="flex flex-col h-full p-6 bg-white rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300">
      <!-- Course Icon Section -->
      <div class="w-full bg-orange-100 flex justify-center items-center rounded-lg mb-4">
        <%= image_tag course.avatar.variant(:thumbnail), class: "rounded-full object-cover #{defined?(nav) ? 'h-8 w-8' : 'w-20 h-20'}" %>
      </div>

      <!-- Course Content Section -->
      <div class="flex-grow">
        <p class="text-sm font-semibold text-gray-500 uppercase">Course</p>
        <h2 class="text-xl font-bold text-gray-900 mb-2"><%= course.name %></h2>
        <p class="text-gray-600 mb-4 leading-tight"><%= truncate(course.description, length: 100) %></p>
      </div>

      <!-- Footer Section -->
      <div class="pt-4 mt-auto border-t border-gray-200">
        <%= link_to course_path(course),
                              class: "dark:text-white hover:underline" do %>
                          <%= lucide_icon('move-right', class: "w-5 h-5") %>
                        <% end %>
        <%= link_to edit_course_path(course),
                              data: { turbo_frame: :modal },
                              class: "dark:text-white hover:underline" do %>
                          <%= lucide_icon('square-pen', class: "w-5 h-5") %>
                        <% end %>
      </div>
    </div>
  <% end %>
</div>

<%if false %>
<div id="resources"
     data-controller="bulk-select"
     data-bulk-select-singular-label-value='resource'
     data-bulk-select-plural-label-value="resources"
     class="flex flex-col bg-white dark:bg-gray-800 dark:border-gray-600 rounded-xl border border-alpha-black-25 shadow-xs p-4">
  <div id="entry-selection-bar" data-bulk-select-target="selectionBar" class="flex justify-center hidden">
    <%= render partial: "shared/common/selection_bar", locals: { destroy_path: bulk_destroy_courses_path } %>
  </div>
  <div class="space-y-4">
    <h1 class="text-xl dark:text-white">Courses</h1>
    <header class="flex justify-between items-center items-center text-gray-900 font-medium">
      <div class="flex">
        <%= render partial: "shared/common/search_bar", locals: { resource_path: courses_path, resource_id: 'courses-search', placeholder: 'Search courses by name' } %>
      </div>
      <div class="flex">
          <%= link_to new_course_path, class: "rounded-lg btn btn--primary text-white flex items-center gap-1 justify-center px-3 py-2", data: { turbo_frame: :modal } do %>
            <%= lucide_icon("plus", class: "w-5 h-5") %>
            <p class="text-sm font-medium">New Course</p>
          <% end %>

      </div>
    </header>
    <div class="flex flex-col">
      <div class="shadow-md sm:rounded-lg">
        <div class="inline-block min-w-full align-middle">
          <div class="overflow-y-auto max-h-96">
            <table class="min-w-full divide-y divide-gray-200 table-fixed dark:divide-gray-700">
              <thead class="bg-gray-100 dark:bg-gray-800 sticky top-0 z-10">
                <tr>
                  <% if  can?(:create, User) %>
                    <th scope="col" class="p-4">
                      <div class="flex items-center">
                        <%= check_box_tag "selection_entry",
                class: "w-4 h-4 text-blue-600 bg-gray-100 rounded border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600",
                data: { action: "bulk-select#togglePageSelection" } %>
                      </div>
                    </th>
                  <% end %>
                  <th scope="col" class="py-3 px-6 text-xs font-medium tracking-wider text-left text-gray-700 uppercase dark:text-gray-400">
                    Name
                  </th>
                  <th scope="col" class="py-3 px-6 text-xs font-medium tracking-wider text-left text-gray-700 uppercase dark:text-gray-400">
                    Created At
                  </th>
                  <th scope="col" class="py-3 px-6 text-xs font-medium tracking-wider text-left text-gray-700 uppercase dark:text-gray-400">
                    Updates At
                  </th>
                  <th scope="col" class="p-4">
                    <span class="sr-only">Actions</span>
                  </th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200 dark:bg-gray-800 dark:divide-gray-700">
                <% @courses.each do |record| %>
                  <tr class="hover:bg-gray-100 dark:hover:bg-gray-700">

                      <td class="p-4 w-4">

                          <div class="flex items-center">
                            <%= check_box_tag dom_id(record, "selection"),
                    class: "maybe-checkbox maybe-checkbox--light",
                    data: { id: record.id, "bulk-select-target": "row", action: "bulk-select#toggleRowSelection" } %>
                          </div>

                      </td>

                    <td class="py-4 px-6 text-sm font-medium text-gray-900 whitespace-nowrap dark:text-white">
                      <%= record.name %>
                    </td>
                    <td class="py-4 px-6 text-sm font-medium text-gray-900 whitespace-nowrap dark:text-white">
                      <%= record.created_at %>
                    </td>
                    <td class="py-4 px-6 text-sm font-medium text-gray-900 whitespace-nowrap dark:text-white">
                      <%= record.updated_at %>
                    </td>
                    <% if can?(:create, User) %>
                      <td class="py-4 px-6 text-sm font-medium text-right whitespace-nowrap flex items-center space-x-4">
                        <%= link_to edit_course_path(record),
                              data: { turbo_frame: :modal },
                              class: "dark:text-white hover:underline" do %>
                          <%= lucide_icon('square-pen', class: "w-5 h-5") %>
                        <% end %>


                      </td>
                    <% end %>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <div class="p-4">
            <%= render "shared/pagination", pagy: @pagy %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
