<div class="container mx-auto px-6 py-10">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="bg-white shadow-lg rounded-lg p-6 flex flex-col md:flex-row items-center">
    <!-- Course Icon Section -->
    <div class="bg-orange-100 p-10 rounded-lg flex justify-center items-center md:w-1/3 w-full">
      <%= image_tag @course.avatar.variant(:thumbnail), class: "h-32 w-32 object-contain" %>
    </div>

    <!-- Course Content Section -->
    <div class="md:w-2/3 w-full md:pl-10 mt-6 md:mt-0">
      <p class="text-sm font-semibold text-gray-500 uppercase mb-2">Course</p>
      <h1 class="text-3xl font-bold text-gray-900 mb-4"><%= @course.name %></h1>
      <p class="text-gray-600 mb-6 leading-relaxed"><%= @course.description %></p>

      <!-- Progress Section -->
      <div class="flex items-center space-x-4 mb-6">
        <div class="w-full bg-gray-200 rounded-full h-2.5">

        </div>

      </div>

      <!-- Action Buttons -->
      <div class="flex items-center space-x-4">
        <%= link_to "Continue Learning", course_path(@course), class: "bg-green-500 hover:bg-green-600 text-white font-medium py-2 px-4 rounded-lg" %>
        <%= link_to "Edit this course", edit_course_path(@course), class: "bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium py-2 px-4 rounded-lg" %>
        <%= link_to "Back to courses", courses_path, class: "bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium py-2 px-4 rounded-lg" %>
        <%= button_to "Destroy this course", @course, method: :delete, data: { confirm: "Are you sure?" }, class: "bg-red-500 hover:bg-red-600 text-white font-medium py-2 px-4 rounded-lg" %>
      </div>
    </div>
  </div>

  <!-- Course Statistics Section -->

</div>
