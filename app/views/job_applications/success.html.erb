<div class="min-h-screen bg-gray-50 py-6">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Success Card -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 text-center">
      <!-- Success Icon -->
      <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-green-100 mb-4">
        <%= lucide_icon('check-circle', class: 'h-6 w-6 text-green-600') %>
      </div>
      
      <!-- Success Message -->
      <h1 class="text-2xl font-bold text-gray-900 mb-3">Application Submitted!</h1>
      <p class="text-base text-gray-600 mb-5">
        Your application for <strong><%= @job.title %></strong> at <strong><%= @job.company.name %></strong> has been successfully submitted.
      </p>

      <!-- Application Details -->
      <div class="bg-gray-50 rounded-lg p-4 mb-6">
        <h3 class="text-base font-semibold text-gray-900 mb-3">Application Details</h3>
        <div class="space-y-2 text-left text-sm">
          <div class="flex justify-between">
            <span class="text-gray-600">Application ID:</span>
            <span class="font-medium text-gray-900">#<%= @application.id %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-600">Submitted:</span>
            <span class="font-medium text-gray-900"><%= @application.display_applied_date %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-600">Type:</span>
            <span class="font-medium text-gray-900"><%= @application.display_application_type %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-600">Status:</span>
            <%= render 'status_badge', status: @application.status %>
          </div>
        </div>
      </div>

      <!-- Next Steps -->
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
        <h3 class="text-base font-semibold text-blue-900 mb-3">What happens next?</h3>
        <div class="space-y-2 text-left text-blue-800">
          <div class="flex items-start">
            <div class="flex-shrink-0 w-5 h-5 bg-blue-200 rounded-full flex items-center justify-center mr-2 mt-0.5">
              <span class="text-xs font-bold text-blue-600">1</span>
            </div>
            <p class="text-xs">Your application will be reviewed by the hiring team</p>
          </div>
          <div class="flex items-start">
            <div class="flex-shrink-0 w-5 h-5 bg-blue-200 rounded-full flex items-center justify-center mr-2 mt-0.5">
              <span class="text-xs font-bold text-blue-600">2</span>
            </div>
            <p class="text-xs">You'll receive email updates about your application status</p>
          </div>
          <div class="flex items-start">
            <div class="flex-shrink-0 w-5 h-5 bg-blue-200 rounded-full flex items-center justify-center mr-2 mt-0.5">
              <span class="text-xs font-bold text-blue-600">3</span>
            </div>
            <p class="text-xs">If selected, you'll be contacted for next steps</p>
          </div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row items-center justify-center space-y-3 sm:space-y-0 sm:space-x-4">
        <%= link_to public_job_path(@job),
            class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200" do %>
          <%= lucide_icon('arrow-left', class: 'w-4 h-4 mr-2') %>
          Back to Job
        <% end %>

        <%= link_to public_jobs_path,
            class: "inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-semibold text-white bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200" do %>
          <%= lucide_icon('search', class: 'w-4 h-4 mr-2') %>
          Browse More Jobs
        <% end %>
      </div>
    </div>

    <!-- Additional Information -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4 mt-6">
      <h3 class="text-base font-semibold text-gray-900 mb-3">Need help?</h3>
      <div class="space-y-2 text-xs text-gray-600">
        <p>• You can withdraw your application at any time before it's reviewed</p>
        <p>• Make sure your contact information is up to date</p>
        <p>• Check your email regularly for application updates</p>
        <p>• Contact the company directly if you have specific questions</p>
      </div>
    </div>
  </div>
</div>
