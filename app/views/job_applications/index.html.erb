<div class="space-y-6">
  <div class="flex justify-between items-center">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Applications for <%= @job.title %></h1>
      <p class="text-gray-600"><%= @job.company.name %></p>
    </div>
    <div class="flex space-x-3">
      <%= link_to @job, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
        <%= lucide_icon('arrow-left', class: 'w-4 h-4 mr-2') %>
        Back to Job
      <% end %>
    </div>
  </div>

  <!-- Application Stats -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
            <%= lucide_icon('users', class: 'w-4 h-4 text-blue-600') %>
          </div>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-500">Total Applications</p>
          <p class="text-2xl font-semibold text-gray-900"><%= @applications.total_count %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-yellow-100 rounded-full flex items-center justify-center">
            <%= lucide_icon('clock', class: 'w-4 h-4 text-yellow-600') %>
          </div>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-500">New</p>
          <p class="text-2xl font-semibold text-gray-900"><%= @applications.select { |a| a.applied? }.count %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
            <%= lucide_icon('check-circle', class: 'w-4 h-4 text-green-600') %>
          </div>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-500">Shortlisted</p>
          <p class="text-2xl font-semibold text-gray-900"><%= @applications.select { |a| a.shortlisted? }.count %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-red-100 rounded-full flex items-center justify-center">
            <%= lucide_icon('x-circle', class: 'w-4 h-4 text-red-600') %>
          </div>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-500">Rejected</p>
          <p class="text-2xl font-semibold text-gray-900"><%= @applications.select { |a| a.rejected? }.count %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Applications List -->
  <div class="bg-white shadow-sm border border-gray-200 rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">All Applications</h3>
    </div>
    
    <div class="divide-y divide-gray-200">
      <% @applications.each do |application| %>
        <div class="px-6 py-4 hover:bg-gray-50">
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-4">
              <div class="flex-shrink-0">
                <% if application.user.profile_image.attached? %>
                  <%= image_tag application.user.profile_image.variant(:small), class: "w-10 h-10 rounded-full" %>
                <% else %>
                  <div class="w-10 h-10 bg-gray-200 rounded-full flex items-center justify-center">
                    <span class="text-gray-500 font-semibold"><%= application.user.initials %></span>
                  </div>
                <% end %>
              </div>
              
              <div>
                <h4 class="text-sm font-medium text-gray-900">
                  <%= link_to application.user.display_name, job_job_application_path(@job, application), class: "hover:text-blue-600" %>
                </h4>
                <p class="text-sm text-gray-500"><%= application.user.email %></p>
                <p class="text-xs text-gray-400">Applied <%= time_ago_in_words(application.applied_at) %> ago</p>
              </div>
            </div>
            
            <div class="flex items-center space-x-3">
              <!-- Status Badge -->
              <% case application.status %>
              <% when 'applied' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  Applied
                </span>
              <% when 'reviewing' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                  Reviewing
                </span>
              <% when 'shortlisted' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  Shortlisted
                </span>
              <% when 'interviewed' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                  Interviewed
                </span>
              <% when 'offered' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                  Offered
                </span>
              <% when 'rejected' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                  Rejected
                </span>
              <% when 'withdrawn' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                  Withdrawn
                </span>
              <% end %>
              
              <!-- Quick Apply Badge -->
              <% if application.is_quick_apply %>
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-orange-100 text-orange-800">
                  Quick Apply
                </span>
              <% end %>
              
              <!-- View Count -->
              <span class="text-xs text-gray-500">
                <%= pluralize(application.view_count, 'view') %>
              </span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <% if @applications.empty? %>
    <div class="text-center py-12">
      <div class="mx-auto h-12 w-12 text-gray-400">
        <%= lucide_icon('users', class: 'h-12 w-12') %>
      </div>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No applications yet</h3>
      <p class="mt-1 text-sm text-gray-500">Applications will appear here once candidates start applying.</p>
    </div>
  <% end %>

  <div class="mt-8">
    <%= render "shared/pagination", pagy: @pagy %>
  </div>
</div>
