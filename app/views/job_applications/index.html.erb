<div class="space-y-5">
  <!-- Header -->
  <div class="flex justify-between items-center">
    <div>
      <h1 class="text-xl font-bold text-gray-900">Applications for <%= @job.title %></h1>
      <p class="text-sm text-gray-600"><%= @job.company.name %></p>
    </div>
    <div class="flex space-x-3">
      <%= link_to @job, class: "inline-flex items-center px-3 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
        <%= lucide_icon('arrow-left', class: 'w-4 h-4 mr-2') %>
        Back to Job
      <% end %>
    </div>
  </div>

  <!-- Application Stats -->
  <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
    <%= render 'stats_card', 
        label: 'Total Applications',
        count: @applications.count,
        icon: 'users',
        bg_color: 'bg-blue-100',
        text_color: 'text-blue-600' %>
    
    <%= render 'stats_card', 
        label: 'New',
        count: @applications.select { |a| a.applied? }.count,
        icon: 'clock',
        bg_color: 'bg-yellow-100',
        text_color: 'text-yellow-600' %>
    
    <%= render 'stats_card', 
        label: 'Shortlisted',
        count: @applications.select { |a| a.shortlisted? }.count,
        icon: 'check-circle',
        bg_color: 'bg-green-100',
        text_color: 'text-green-600' %>
    
    <%= render 'stats_card', 
        label: 'Rejected',
        count: @applications.select { |a| a.rejected? }.count,
        icon: 'x-circle',
        bg_color: 'bg-red-100',
        text_color: 'text-red-600' %>
  </div>

  <!-- Applications List -->
  <div class="bg-white shadow-sm border border-gray-200 rounded-lg">
    <div class="px-4 py-3 border-b border-gray-200">
      <h3 class="text-base font-medium text-gray-900">All Applications</h3>
    </div>

    <div class="divide-y divide-gray-200">
      <% @applications.each do |application| %>
        <%= render 'application_card', application: application %>
      <% end %>
    </div>
  </div>

  <% if @applications.empty? %>
    <%= render 'empty_state' %>
  <% end %>

  <div class="mt-6">
    <%= render "shared/pagination", pagy: @pagy %>
  </div>
</div>
