<div class="max-w-4xl mx-auto">
  <!-- Header -->
  <div class="mb-5">
    <div class="flex justify-between items-start">
      <div>
        <h1 class="text-xl font-bold text-gray-900">Application Review</h1>
        <p class="text-sm text-gray-600"><%= @job.title %> at <%= @job.company.name %></p>
      </div>

      <div class="flex space-x-3">
        <% if current_user.company? %>
          <%= link_to job_job_applications_path(@job), class: "inline-flex items-center px-3 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
            <%= lucide_icon('arrow-left', class: 'w-4 h-4 mr-2') %>
            Back to Applications
          <% end %>
        <% else %>
          <%= link_to public_job_path(@job), class: "inline-flex items-center px-3 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
            <%= lucide_icon('arrow-left', class: 'w-4 h-4 mr-2') %>
            Back to Job
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-5">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-5">
      <%= render 'applicant_info' %>
      
      <% if @application.cover_letter.present? %>
        <%= render 'content_section', title: 'Cover Letter', content: simple_format(@application.cover_letter) %>
      <% end %>
      
      <%= render 'resume_section' %>
      <%= render 'portfolio_section' %>
      
      <% if @application.additional_notes.present? %>
        <%= render 'content_section', title: 'Additional Notes', content: simple_format(@application.additional_notes) %>
      <% end %>
    </div>

    <!-- Sidebar -->
    <div class="space-y-5">
      <%= render 'status_section' %>
      <%= render 'details_section' %>
      <%= render 'actions_section' %>
    </div>
  </div>
</div>
