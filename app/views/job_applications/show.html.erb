<div class="max-w-4xl mx-auto">
  <!-- Header -->
  <div class="mb-6">
    <div class="flex justify-between items-start">
      <div>
        <h1 class="text-2xl font-bold text-gray-900">Application Review</h1>
        <p class="text-gray-600"><%= @job.title %> at <%= @job.company.name %></p>
      </div>

      <div class="flex space-x-3">
        <%= link_to job_job_applications_path(@job), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
          <%= lucide_icon('arrow-left', class: 'w-4 h-4 mr-2') %>
          Back to Applications
        <% end %>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Applicant Info -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Applicant Information</h2>

        <div class="flex items-start space-x-4">
          <div class="flex-shrink-0">
            <% if @application.user.avatar.attached? %>
              <%= image_tag @application.user.avatar.variant(:small), class: "w-16 h-16 rounded-full" %>
            <% else %>
              <div class="w-16 h-16 bg-gray-200 rounded-full flex items-center justify-center">
                <span class="text-gray-500 font-semibold text-lg"><%= @application.user.initials %></span>
              </div>
            <% end %>
          </div>

          <div class="flex-1">
            <h3 class="text-lg font-medium text-gray-900"><%= @application.user.display_name %></h3>
            <p class="text-gray-600"><%= @application.user.email %></p>
            <p class="text-sm text-gray-500">Applied <%= @application.display_applied_date %></p>
            <% if @application.candidate.location.present? %>
              <p class="text-sm text-gray-500 mt-1">
                <%= lucide_icon('map-pin', class: 'w-4 h-4 inline mr-1') %>
                <%= @application.candidate.location.location_search %>
              </p>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Cover Letter -->
      <% if @application.cover_letter.present? %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Cover Letter</h2>
          <div class="prose max-w-none">
            <%= simple_format(@application.cover_letter) %>
          </div>
        </div>
      <% end %>

      <!-- Resume -->
      <% if @application.resume.attached? %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Resume/CV</h2>
          <div class="flex items-center space-x-3">
            <%= lucide_icon('file-text', class: 'w-8 h-8 text-gray-400') %>
            <div>
              <p class="font-medium text-gray-900"><%= @application.resume.filename %></p>
              <p class="text-sm text-gray-500"><%= number_to_human_size(@application.resume.byte_size) %></p>
            </div>
            <%= link_to rails_blob_path(@application.resume, disposition: 'attachment'),
                class: "ml-auto inline-flex items-center px-3 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
              <%= lucide_icon('download', class: 'w-4 h-4 mr-2') %>
              Download
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Portfolio -->
      <% if @application.portfolio_url.present? %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Portfolio</h2>
          <%= link_to @application.portfolio_url,
              target: "_blank",
              class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
            <%= lucide_icon('external-link', class: 'w-4 h-4 mr-2') %>
            View Portfolio
          <% end %>
        </div>
      <% end %>

      <!-- Additional Notes -->
      <% if @application.additional_notes.present? %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Additional Notes</h2>
          <div class="prose max-w-none">
            <%= simple_format(@application.additional_notes) %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Application Status -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Application Status</h3>

        <div class="space-y-4">
          <!-- Current Status -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Current Status</label>
            <% case @application.status %>
            <% when 'applied' %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                Applied
              </span>
            <% when 'reviewing' %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
                Reviewing
              </span>
            <% when 'shortlisted' %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                Shortlisted
              </span>
            <% when 'interviewed' %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-purple-100 text-purple-800">
                Interviewed
              </span>
            <% when 'offered' %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-indigo-100 text-indigo-800">
                Offered
              </span>
            <% when 'rejected' %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800">
                Rejected
              </span>
            <% when 'withdrawn' %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
                Withdrawn
              </span>
            <% end %>
          </div>

          <!-- Status Update Form (for company users) -->
          <% if current_user.company == @job.company %>
            <%= form_with url: update_status_job_job_application_path(@job, @application), method: :patch, class: "space-y-4" do |f| %>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Update Status</label>
                <%= f.select :status,
                    JobApplication::STATUSES.map { |status| [status.titleize, status] },
                    { selected: @application.status },
                    { class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } %>
              </div>

              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Status Notes (Optional)</label>
                <%= f.text_area :status_notes,
                    value: @application.status_notes,
                    rows: 3,
                    class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
                    placeholder: "Add any notes about this status change..." %>
              </div>

              <%= f.submit "Update Status",
                  class: "w-full inline-flex justify-center items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
            <% end %>
          <% end %>
        </div>
      </div>

      <!-- Application Details -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Application Details</h3>

        <div class="space-y-3">
          <div class="flex justify-between">
            <span class="text-gray-600">Application Date</span>
            <span class="font-medium"><%= @application.display_applied_date %></span>
          </div>

          <% if @application.reviewed_at.present? %>
            <div class="flex justify-between">
              <span class="text-gray-600">Last Reviewed</span>
              <span class="font-medium"><%= @application.display_reviewed_date %></span>
            </div>

            <% if @application.reviewed_by.present? %>
              <div class="flex justify-between">
                <span class="text-gray-600">Reviewed By</span>
                <span class="font-medium"><%= @application.reviewed_by.display_name %></span>
              </div>
            <% end %>
          <% end %>

          <div class="flex justify-between">
            <span class="text-gray-600">Views</span>
            <span class="font-medium"><%= @application.view_count %></span>
          </div>

          <% if @application.is_quick_apply %>
            <div class="flex justify-between">
              <span class="text-gray-600">Application Type</span>
              <span class="font-medium text-orange-600">Quick Apply</span>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Actions -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Actions</h3>

        <div class="space-y-3">
          <% if @application.user == current_user && @application.can_be_withdrawn? %>
            <%= link_to withdraw_job_job_application_path(@job, @application),
                data: { turbo_confirm: "Are you sure you want to withdraw your application?", turbo_method: :patch },
                class: "w-full inline-flex justify-center items-center px-4 py-2 border border-red-300 rounded-md shadow-sm text-sm font-medium text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" do %>
              <%= lucide_icon('x-circle', class: 'w-4 h-4 mr-2') %>
              Withdraw Application
            <% end %>
          <% end %>

          <% if @application.user == current_user && @application.can_be_withdrawn? %>
            <%= link_to edit_job_job_application_path(@job, @application),
                class: "w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500" do %>
              <%= lucide_icon('edit', class: 'w-4 h-4 mr-2') %>
              Edit Application
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
