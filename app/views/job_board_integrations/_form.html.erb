<%= styled_form_with model: integration, class: "space-y-6" do |f| %>
  <% if integration.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-md p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <%= lucide_icon('alert-circle', class: 'h-5 w-5 text-red-400') %>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            There were <%= pluralize(integration.errors.count, "error") %> with your submission:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% integration.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Basic Information -->
  <div class="space-y-4">
    <h3 class="text-lg font-medium text-gray-900">Integration Details</h3>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <%= f.text_field :name, label: 'Integration Name',
          placeholder: 'e.g. LinkedIn Production' %>

      <%= f.select :provider,
          @providers.map { |p| [p.name, p.slug] },
          { label: 'Job Board Provider', selected: params[:provider] || integration.provider } %>
    </div>
  </div>

  <!-- API Credentials -->
  <div class="space-y-4">
    <h3 class="text-lg font-medium text-gray-900">API Credentials</h3>
    <p class="text-sm text-gray-600">Enter your API credentials from the job board provider.</p>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <%= f.text_field :api_key, label: 'API Key',
          placeholder: 'Enter your API key' %>

      <%= f.text_field :api_secret, label: 'API Secret',
          placeholder: 'Enter your API secret' %>
    </div>

    <%= f.text_field :webhook_url, label: 'Webhook URL (Optional)',
        placeholder: 'https://your-domain.com/webhooks/job-board' %>
  </div>

  <!-- Settings -->
  <div class="space-y-4">
    <h3 class="text-lg font-medium text-gray-900">Sync Settings</h3>

    <div class="space-y-4">
      <%= f.select :status,
          [['Active', 'active'], ['Inactive', 'inactive']],
          { label: 'Status' } %>

      <div class="space-y-3">
        <label class="flex items-center">
          <%= f.check_box :auto_sync, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
          <span class="ml-2 text-sm text-gray-900">Automatically sync new jobs</span>
        </label>

        <label class="flex items-center">
          <%= f.check_box :update_existing_jobs, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
          <span class="ml-2 text-sm text-gray-900">Update existing jobs when modified</span>
        </label>

        <label class="flex items-center">
          <%= f.check_box :delete_closed_jobs, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
          <span class="ml-2 text-sm text-gray-900">Remove jobs from external board when closed</span>
        </label>
      </div>
    </div>
  </div>

  <!-- Actions -->
  <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
    <%= link_to "Cancel", job_board_integrations_path,
        class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>

    <%= f.submit integration.persisted? ? "Update Integration" : "Create Integration" %>
  </div>
<% end %>
