<!-- Header -->
<header class="bg-white shadow-sm sticky top-0 z-50">
  <div class="container mx-auto px-4 md:px-8">
    <div class="flex items-center justify-between h-14">

      <!-- Logo -->
      <div class="flex items-center">
        <%= link_to root_path, class: "flex items-center space-x-2" do %>
          <div class="w-7 h-7 bg-gradient-to-br from-slate-600 to-amber-500 rounded-lg flex items-center justify-center">
            <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <span class="text-lg font-semibold text-slate-900">Hiring Wheels</span>
        <% end %>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center space-x-6">
        <%= link_to "Browse Jobs", public_jobs_path, class: "text-sm text-slate-600 hover:text-slate-900 transition duration-200 font-medium" %>
        <%= link_to "Features", features_path, class: "text-sm text-slate-600 hover:text-slate-900 transition duration-200 font-medium" %>
        <%= link_to "Pricing", pricing_path, class: "text-sm text-slate-600 hover:text-slate-900 transition duration-200 font-medium" %>
        <%= link_to "About", about_path, class: "text-sm text-slate-600 hover:text-slate-900 transition duration-200 font-medium" %>
        <%= link_to "Contact", contact_path, class: "text-sm text-slate-600 hover:text-slate-900 transition duration-200 font-medium" %>
      </nav>

      <!-- CTA Buttons -->
      <div class="hidden md:flex items-center space-x-3">
        <%= link_to "Sign In", new_user_session_path,
            class: "text-sm text-slate-600 hover:text-slate-900 transition duration-200 font-medium" %>
        <%= link_to "Get Started", new_user_registration_path,
            class: "bg-slate-800 text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-slate-700 transition duration-200" %>
      </div>

      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button type="button" class="text-slate-600 hover:text-slate-900" onclick="toggleMobileMenu()">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="md:hidden hidden">
      <div class="px-2 pt-2 pb-3 space-y-1 bg-white border-t border-slate-200">
        <%= link_to "Features", features_path,
            class: "block px-3 py-2 text-sm text-slate-600 hover:text-slate-900 transition duration-200 font-medium" %>
        <%= link_to "Pricing", pricing_path,
            class: "block px-3 py-2 text-sm text-slate-600 hover:text-slate-900 transition duration-200 font-medium" %>
        <%= link_to "About", about_path,
            class: "block px-3 py-2 text-sm text-slate-600 hover:text-slate-900 transition duration-200 font-medium" %>
        <%= link_to "Contact", contact_path,
            class: "block px-3 py-2 text-sm text-slate-600 hover:text-slate-900 transition duration-200 font-medium" %>
        <div class="border-t border-slate-200 pt-3 mt-3">
          <%= link_to "Sign In", new_user_session_path,
              class: "block px-3 py-2 text-sm text-slate-600 hover:text-slate-900 transition duration-200 font-medium" %>
          <%= link_to "Get Started", new_user_registration_path,
              class: "block px-3 py-2 bg-slate-800 text-white rounded-md text-sm font-medium hover:bg-slate-700 transition duration-200 text-center mt-2" %>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
function toggleMobileMenu() {
  const menu = document.getElementById('mobile-menu');
  menu.classList.toggle('hidden');
}
</script>
