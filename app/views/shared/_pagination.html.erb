<%# locals: (pagy:, current_path: nil) %>
<% if pagy.pages > 1 %>
  <nav class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 py-3 px-4">
    <div class="flex items-center">
      <span class="text-sm text-gray-600 dark:text-gray-300">
        Showing <span class="font-semibold text-gray-900 dark:text-white"><%= pagy.from %></span> to <span class="font-semibold text-gray-900 dark:text-white"><%= pagy.to %></span> of <span class="font-semibold text-gray-900 dark:text-white"><%= pagy.count %></span> results
      </span>
    </div>

    <div class="flex items-center gap-2">
      <% if pagy.prev %>
        <%= link_to custom_pagy_url_for(pagy, pagy.prev, current_path: current_path),
              class: "flex items-center justify-center h-8 w-8 text-gray-600 bg-white rounded-md border border-gray-300 hover:bg-gray-50 hover:text-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-800 dark:border-gray-600 dark:text-gray-300 dark:hover:bg-gray-700 dark:hover:text-blue-400 transition-colors",
              aria: { label: "Previous" },
              data: (current_path ? { turbo_frame: "_top" } : {}) do %>
          <%= lucide_icon("chevron-left", class: "w-4 h-4") %>
        <% end %>
      <% else %>
        <button disabled class="flex items-center justify-center h-8 w-8 text-gray-300 bg-white rounded-md border border-gray-200 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-600 cursor-not-allowed">
          <%= lucide_icon("chevron-left", class: "w-4 h-4") %>
        </button>
      <% end %>

      <div class="hidden sm:flex sm:items-center">
        <% pagy.series.each do |series_item| %>
          <% if series_item.is_a?(Integer) %>
            <%= link_to custom_pagy_url_for(pagy, series_item, current_path: current_path),
                  class: "flex items-center justify-center h-8 min-w-[2rem] text-sm font-medium text-gray-700 bg-white border border-gray-300 hover:bg-gray-50 hover:text-blue-600 focus:z-10 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-800 dark:border-gray-600 dark:text-gray-300 dark:hover:bg-gray-700 dark:hover:text-blue-400 transition-colors",
                  data: (current_path ? { turbo_frame: "_top" } : {}) do %>
              <%= series_item %>
            <% end %>
          <% elsif series_item.is_a?(String) %>
            <button class="flex items-center justify-center h-8 min-w-[2rem] text-sm font-medium text-white bg-blue-600 border border-blue-600 hover:bg-blue-700 focus:z-10 focus:outline-none focus:ring-2 focus:ring-blue-700 dark:bg-blue-500 dark:border-blue-500 dark:hover:bg-blue-600 transition-colors" aria-current="page">
              <%= series_item %>
            </button>
          <% elsif series_item == :gap %>
            <span class="flex items-center justify-center h-8 min-w-[2rem] text-sm font-medium text-gray-700 bg-white border border-gray-300 dark:bg-gray-800 dark:border-gray-600 dark:text-gray-400">...</span>
          <% end %>
        <% end %>
      </div>

      <span class="sm:hidden text-sm font-medium text-gray-700 dark:text-gray-300">
        Page <%= pagy.page %> of <%= pagy.pages %>
      </span>

      <% if pagy.next %>
        <%= link_to custom_pagy_url_for(pagy, pagy.next, current_path: current_path),
              class: "flex items-center justify-center h-8 w-8 text-gray-600 bg-white rounded-md border border-gray-300 hover:bg-gray-50 hover:text-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-800 dark:border-gray-600 dark:text-gray-300 dark:hover:bg-gray-700 dark:hover:text-blue-400 transition-colors",
              aria: { label: "Next" },
              data: (current_path ? { turbo_frame: "_top" } : {}) do %>
          <%= lucide_icon("chevron-right", class: "w-4 h-4") %>
        <% end %>
      <% else %>
        <button disabled class="flex items-center justify-center h-8 w-8 text-gray-300 bg-white rounded-md border border-gray-200 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-600 cursor-not-allowed">
          <%= lucide_icon("chevron-right", class: "w-4 h-4") %>
        </button>
      <% end %>

      <%= form_with url: custom_pagy_url_for(pagy, pagy.page, current_path: current_path),
                  method: :get,
                  class: "hidden md:flex items-center ml-4",
                  data: { controller: "auto-submit-form" } do |f| %>
        <%= f.label :per_page, t(".rows_per_page", default: "Rows per page"), class: "text-sm text-gray-600 dark:text-gray-300 mr-2" %>

        <%= f.select :per_page,
             options_for_select(["10", "20", "30", "50"], pagy.limit.to_s),
             {},
             class: "bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-200 text-sm rounded-md py-1 px-2 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 cursor-pointer",
             data: { "auto-submit-form-target": "auto" } %>
      <% end %>
    </div>
  </nav>
<% end %>
