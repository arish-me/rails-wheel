<section class="flex h-screen">
  <%= render partial: 'devise/shared/side_view' %>
  <!-- Right side - Form area -->
  <div class="w-full md:w-1/2 flex flex-col justify-center items-center p-8 bg-white theme-dark:bg-gray-900">
    <div class="w-full max-w-md">
      <!-- Mobile logo (visible only on mobile) -->
      <div class="md:hidden flex items-center justify-between mb-8">
        <%= link_to root_path, class: "flex items-center text-2xl font-semibold text-gray-900 theme-dark:text-white" do %>
          Wheel
        <% end %>
        <%= link_to "Back", root_path, class: "text-sm font-medium text-gray-600 theme-dark:text-gray-400" %>
      </div>
      <h2 class="text-2xl font-bold text-gray-900 theme-dark:text-white mb-2">
        Create an account
      </h2>
      <p class="text-sm text-gray-600 theme-dark:text-gray-400 mb-8">
        Or existing user
        <%= link_to "Login", new_session_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500 theme-dark:text-blue-400 theme-dark:hover:text-blue-300 transition-colors duration-200" %>
      </p>
      <% if resource.errors.present? %>
        <div class="text-red-600 theme-dark:text-red-400 flex items-center gap-2 mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
          <p class="text-sm"><%= resource.errors.full_messages.to_sentence %></p>
        </div>
      <% end %>
      <%= styled_form_with(model: resource, url:  registration_path(resource_name), method: :post, local: true, class: "space-y-4") do |f| %>

       <%# --- START: User Type Checkboxes --- %>
        <div class="space-y-2">
          <label class="block text-sm font-medium text-gray-700 theme-dark:text-gray-200">
            I want to sign up as: <span class="text-red-500">*</span>
          </label>
          <div class="flex gap-4">
            <div class="flex items-center">
              <%= f.radio_button :user_type, :user, id: 'user_type_user', class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 theme-dark:bg-gray-700 theme-dark:border-gray-600", required: true %>
              <label for="user_type_user" class="ml-2 text-sm text-gray-700 theme-dark:text-gray-300">
                Individual User
              </label>
            </div>
            <div class="flex items-center">
              <%= f.radio_button :user_type, :company, id: 'user_type_company', class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 theme-dark:bg-gray-700 theme-dark:border-gray-600", required: true %>
              <label for="user_type_company" class="ml-2 text-sm text-gray-700 theme-dark:text-gray-300">
                Company
              </label>
            </div>
          </div>
        </div>
        <%# --- END: User Type Checkboxes --- %>

        <section class="space-y-2 overflow-hidden">
          <%= f.email_field :email, label: 'Email', placeholder: 'Enter Email', autofocus: true, autocomplete: "email",  required: true %>
        </section>
        <section class="space-y-2 overflow-hidden">
          <%= f.password_field :password, label: 'Password', placeholder: 'Enter Password', autocomplete: "new-password",  required: true %>
        </section>
        <section class="space-y-2 overflow-hidden">
          <%= f.password_field :password_confirmation, label: 'Confirm Password', placeholder: 'Enter Password', autocomplete: "new-password",  required: true %>
        </section>
        <div class="flex items-start">
          <div class="flex items-center h-5">
            <input id="terms" aria-describedby="terms" type="checkbox" class="w-4 h-4 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500 theme-dark:border-gray-600 theme-dark:bg-gray-700" required="">
          </div>
          <div class="ml-3 text-sm">
            <label for="terms" class="text-gray-500 theme-dark:text-gray-400">I accept the <a class="font-medium text-blue-600 hover:text-blue-500 theme-dark:text-blue-400 theme-dark:hover:text-blue-300 transition-colors duration-200" href="#">Terms and Conditions</a></label>
          </div>
        </div>
        <%= f.submit "Create Account" %>
      <% end %>
      <div class="mt-6">
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-300 theme-dark:border-gray-700"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-2 bg-white theme-dark:bg-gray-900 text-gray-500 theme-dark:text-gray-400">
              OR CONTINUE WITH
            </span>
          </div>
        </div>
        <div class="mt-6 grid grid-cols-3 gap-3">
          <%= render "devise/shared/social_links" %>
        </div>
        <div class="mt-4 text-center text-sm text-gray-600">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>
