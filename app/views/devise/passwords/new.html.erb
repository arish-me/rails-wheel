<section class="bg-gray-50 dark:bg-gray-900">
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
    <%= link_to root_path, class: "flex items-center mb-6 text-2xl font-semibold text-gray-900 dark:text-white" do %>
      Wheel
    <% end %>
    <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <div class="sm:mx-auto sm:w-full sm:max-w-md">
          <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
            Forgot Password?
          </h2>
        </div>
        <%= styled_form_with(model: resource, url: password_path(resource_name), method: :post, local: true, class: "space-y-4") do |f| %>
          <% if resource.errors.any? %>
            <%= render "shared/form_errors" , model: resource %>
          <% end %>
          <section class="space-y-2 overflow-hidden">
            <%= f.email_field :email, label: 'Email' , placeholder: 'Enter Email' %>
          </section>
          <section>
            <%= f.submit 'Submit' %>
          </section>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
