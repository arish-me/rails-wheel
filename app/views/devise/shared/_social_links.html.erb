<% if devise_mapping.omniauthable? %>
  <% resource_class.omniauth_providers.each do |provider| %>
      <div>
        <%= button_to omniauth_authorize_path(resource_name, provider), class: "w-full flex items-center justify-center px-8 py-3 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50", data: { turbo: false } do %>
          <% if provider == :google_oauth2 %>
            <img class="h-6 w-6" src="https://www.svgrepo.com/show/506498/google.svg" alt="Google" test-id="google">
          <% elsif provider == :github %>
            <img class="h-6 w-6" src="https://www.svgrepo.com/show/349375/github.svg" alt="Github" test-id="github">
          <% end %>
        <% end %>
      </div>
  <% end %>
<% end %>