<section class="bg-gray-50 dark:bg-gray-900">
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
    <%= link_to root_path, class: "flex items-center mb-6 text-2xl font-semibold text-gray-900 dark:text-white" do %>
      Wheel
    <% end %>
    <div class="w-full bg-white rounded-lg shadow-lg dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <div class="sm:mx-auto sm:w-full sm:max-w-md">
          <h2 class="mt-6 text-center text-2xl font-bold text-gray-900 dark:text-white">
            Resend unlock instructions
          </h2>
        </div>
        <%= styled_form_with(model: resource, url: unlock_path(resource_name), method: :post, local: true, class: "space-y-4 mt-8") do |f| %>
          <% if resource.errors.any? %>
            <%= render "shared/form_errors" , model: resource %>
          <% end %>
          <section class="space-y-2 overflow-hidden">
            <%= f.email_field :email, label: 'Email' , placeholder: 'Enter Email' %>
          </section>
          <section>
            <%= f.submit 'Resend unlock instructions', class: "w-full text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-500 dark:hover:bg-blue-600 dark:focus:ring-blue-700 transition-colors duration-200" %>
          </section>
        <% end %>
        <div class="mt-4 text-center text-sm text-gray-600 dark:text-gray-400">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>

