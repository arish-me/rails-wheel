<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Subscription Management</h1>
  </div>

  <div class="bg-white shadow rounded-lg overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-medium text-gray-900">Company Subscriptions</h2>
    </div>
    
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Company</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Days Remaining</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Start Date</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">End Date</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @companies.each do |company| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900"><%= company.name %></div>
                <div class="text-sm text-gray-500"><%= company.users.count %> users</div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if company.has_subscription? %>
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full
                    <%= case company.subscription_status
                        when 'active'
                          'bg-green-100 text-green-800'
                        when 'trial'
                          'bg-amber-100 text-amber-800'
                        when 'expired'
                          'bg-red-100 text-red-800'
                        else
                          'bg-gray-100 text-gray-800'
                        end %>">
                    <%= company.subscription_status.titleize %>
                  </span>
                <% else %>
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                    No Subscription
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <% if company.has_subscription? %>
                  <%= company.company_subscription.days_remaining %>
                <% else %>
                  -
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <% if company.has_subscription? %>
                  <%= company.company_subscription.start_date.strftime("%b %d, %Y") %>
                <% else %>
                  -
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <% if company.has_subscription? %>
                  <%= company.company_subscription.end_date.strftime("%b %d, %Y") %>
                <% else %>
                  -
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <%= link_to "View Details", admin_subscription_management_path(company), 
                    class: "text-indigo-600 hover:text-indigo-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <!-- Pagination -->
    <div class="px-6 py-4 border-t border-gray-200">
      <%== pagy_nav(@pagy) %>
    </div>
  </div>
</div>
