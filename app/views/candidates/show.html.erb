<div class="mx-auto px-4 grid grid-cols-3 md:grid-cols-4 gap-4">
	<!-- Sidebar -->
	<aside class="col-span-1 bg-white rounded-2xl shadow-lg p-8 flex flex-col items-center">
		<!-- Avatar -->
		<%= render AvatarComponent.new(avatarable: @user, variant: :thumbnail) %>
		<!-- Name & Status -->
		<h2 class="text-2xl font-bold text-gray-900 text-center"><%= @candidate.user.display_name %></h2>
		<%= render RenderableComponent.new("space-y-3 pb-4") do %>
			<%= render Candidates::SearchStatusComponent.new(@candidate) %>
		<% end %>
		<div class="w-full text-center mb-6">
			<div class="text-sm text-gray-900"><%= @candidate.headline %></div>
		</div>
		<!-- Personal Info -->
    <div class="w-full text-start mb-6">
			<h2 class="text-sm font-medium text-gray-500 mb-4"> Personal Information </h2>
			<div class="space-y-5">
				<!-- Gender -->
				<div class="flex items-center gap-4">
					<div class="flex-shrink-0 bg-gray-100 rounded-lg w-10 h-10 flex items-center justify-center">
						<!-- Gender Icon -->
						<svg class="w-6 h-6 text-gray-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
							<circle cx="12" cy="12" r="6"/>
							<path d="M19 5l-5.5 5.5"/>
						</svg>
					</div>
					<div>
						<div class="text-xs text-gray-500">Gender</div>
						<span class="text-gray-900 text-sm font-medium"><%= @candidate.user.gender&.humanize || '-' %></span>
					</div>
				</div>
				<!-- Date of Birth -->
				<div class="flex items-center gap-4">
					<div class="flex-shrink-0 bg-gray-100 rounded-lg w-10 h-10 flex items-center justify-center">
						<!-- Calendar Icon -->
						<svg class="w-6 h-6 text-gray-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
							<rect x="3" y="4" width="18" height="18" rx="2"/>
							<path d="M16 2v4M8 2v4M3 10h18"/>
						</svg>
					</div>
					<div>
						<div class="text-xs text-gray-500">Date of Birth</div>
						<span class="text-gray-900 text-sm font-medium"><%= @candidate.user.date_of_birth&.strftime('%B %d, %Y') || '-' %></span>
					</div>
				</div>
				<!-- Email -->
				<div class="flex items-center gap-4">
					<div class="flex-shrink-0 bg-gray-100 rounded-lg w-10 h-10 flex items-center justify-center">
						<!-- Email Icon -->
						<svg class="w-6 h-6 text-gray-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
							<rect x="3" y="5" width="18" height="14" rx="2"/>
							<path d="M3 7l9 6 9-6"/>
						</svg>
					</div>
					<div>
						<div class="text-xs text-gray-500">Email Address</div>
						<span class="text-gray-900 text-sm font-medium"><%= @candidate.user.email %></span>
					</div>
				</div>
				<!-- Phone -->
				<div class="flex items-center gap-4">
					<div class="flex-shrink-0 bg-gray-100 rounded-lg w-10 h-10 flex items-center justify-center">
						<!-- Phone Icon -->
						<svg class="w-6 h-6 text-gray-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
							<path d="M22 16.92V19a2 2 0 0 1-2.18 2A19.72 19.72 0 0 1 3 5.18 2 2 0 0 1 5 3h2.09a2 2 0 0 1 2 1.72c.13 1.13.37 2.23.72 3.28a2 2 0 0 1-.45 2.11l-1.27 1.27a16 16 0 0 0 6.29 6.29l1.27-1.27a2 2 0 0 1 2.11-.45c1.05.35 2.15.59 3.28.72A2 2 0 0 1 22 16.92z"/>
						</svg>
					</div>
					<div>
						<div class="text-xs text-gray-500">Phone Number</div>
						<span class="text-gray-900 text-sm font-medium"><%= @candidate.user.phone_number || '-' %></span>
					</div>
				</div>
			</div>
		</div>
		<div class="w-full text-start mb-6">
			<div class="space-y-5 divide-y divide-gray-200">
				<%= render RenderableComponent.new("space-y-5 pb-4") do %>
					<%= render RoleTypes::Component.new(@candidate&.role_type) %>
				<% end %>
				<%= render RenderableComponent.new("space-y-5 pb-4") do %>
					<%= render RoleLevels::Component.new(@candidate&.role_level) %>
				<% end %>
				<%= render RenderableComponent.new("space-y-3 pb-4") do %>
					<%= render ExternalLinkComponent.new(@candidate.social_link.website) %>
					<%= render SocialLinkComponent.new(@candidate.social_link.github, :github) %>
					<%= render SocialLinkComponent.new(@candidate.social_link.linked_in, :linkedin) %>
					<%= render SocialLinkComponent.new(@candidate.social_link.twitter, :twitter) %>
				<% end %>
				<%= render RenderableComponent.new("space-y-3 pb-4") do %>
					<%= render Locations::Component.new(@candidate.user.location) %>
					<%= render Locations::TimeZoneComponent.new(@candidate.user.location) %>
				<% end %>
			</div>
		</div>
	</aside>
	<!-- Main Content -->
	<main class="col-span-2 space-y-8">
		<!-- Overview -->
		<section class="bg-white rounded-2xl shadow-lg p-8">
			<h3 class="text-lg font-bold text-gray-900 mb-2">Overview</h3>
			<div class="prose max-w-prose">
        <%== current_user&.rich_text_bio %>
      </div>
		</section>
		<!-- Experience -->
		<section class="bg-white rounded-2xl shadow-lg p-8">
			<h3 class="text-lg font-bold text-gray-900 mb-6">Experience</h3>
			<div class="mb-8">
				<div class="flex items-center mb-1">
					<span class="inline-flex items-center justify-center w-9 h-9 rounded-full bg-lime-100 text-lime-600 font-bold mr-4 text-lg">T</span>
					<div>
						<div class="font-semibold text-gray-900">TechSolutions Inc.</div>
						<div class="text-xs text-gray-500">Network Engineer &bull; January 2020 - Present</div>
					</div>
				</div>
				<ul class="list-disc list-inside text-gray-700 text-sm ml-14 mt-1">
					<li>Managed and maintained a network for a large corporate office with over 500 employees.</li>
					<li>Implemented new security protocols that reduced system vulnerabilities by 40%.</li>
				</ul>
			</div>
			<div>
				<div class="flex items-center mb-1">
					<span class="inline-flex items-center justify-center w-9 h-9 rounded-full bg-lime-100 text-lime-600 font-bold mr-4 text-lg">N</span>
					<div>
						<div class="font-semibold text-gray-900">NetGrowth Technologies</div>
						<div class="text-xs text-gray-500">Junior Network Engineer &bull; June 2016 - December 2019</div>
					</div>
				</div>
				<ul class="list-disc list-inside text-gray-700 text-sm ml-14 mt-1">
					<li>Assisted in the rollout of a new company-wide email system, enhancing communication efficiency.</li>
					<li>Supported network upgrade projects that improved system uptime and performance.</li>
				</ul>
			</div>
		</section>
		<!-- Education -->
		<section class="bg-white rounded-2xl shadow-lg p-8">
			<h3 class="text-lg font-bold text-gray-900 mb-6">Education</h3>
			<div class="flex items-center">
				<span class="inline-flex items-center justify-center w-9 h-9 rounded-full bg-indigo-100 text-indigo-600 font-bold mr-4">
					<svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M12 14l9-5-9-5-9 5 9 5z"/><path d="M12 14l6.16-3.422A12.083 12.083 0 0 1 21 10.5c0 5.523-4.477 10-10 10S1 16.023 1 10.5c0-.828.08-1.637.234-2.422L12 14z"/></svg>
				</span>
				<div>
					<div class="font-semibold text-gray-900">University of Illinois at Urbana-Champaign</div>
					<div class="text-xs text-gray-500">B.S. in Computer Science &bull; 2011 - 2015</div>
				</div>
			</div>
		</section>
	</main>
</div>
