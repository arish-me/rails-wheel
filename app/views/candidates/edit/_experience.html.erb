<%= render DialogComponent.new(variant: :modal, width: :lg) do |dialog| %>
  <% dialog.with_header(title: t("edit_information")) %>
  <% dialog.with_body do %>
    <%= turbo_frame_tag "candidate_experience" do %>
      <%= render "candidates/forms/experience_form", experience: experience, url: experience.persisted? ? experience_path(experience) : experiences_path, method: experience.persisted? ? :patch : :post %>
    <% end %>
  <% end %>
<% end %>