<% content_for :candidate_tab do %>
  <%= render 'layouts/candidate_tab' %>
<% end %>
<h1>Candidate Profiles</h1>

<div class="p-4">
  <h2 class="text-xl font-bold mb-4">Candidate: <%= @candidate.user&.display_name || "Unknown" %></h2>

  <% if @candidate.respond_to?(:profiles) && @profiles.present? %>
    <div class="space-y-4">
      <% @profiles.each do |profile| %>
        <div class="border p-4 rounded">
          <h3 class="font-semibold">Profile ID: <%= profile.id %></h3>
          <!-- Add more profile details here -->
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-500">No profiles found for this candidate.</p>
  <% end %>
</div>