<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
  <h3 class="text-lg font-semibold text-gray-900 mb-4">Filters</h3>

  <%= form_with url: company_candidates_path, method: :get, local: true, class: "space-y-4" do |f| %>
    <!-- Job Filter -->
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2">Job</label>
      <%= f.select :job_id,
          options_from_collection_for_select(@jobs, :id, :title, params[:job_id]),
          { prompt: "All Jobs" },
          { class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } %>
    </div>

    <!-- Job Location Filter -->
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2">Job Location</label>
      <%= f.select :location,
          options_from_collection_for_select(@locations, :city, :city, params[:location]),
          { prompt: "All Job Locations" },
          { class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } %>
    </div>

    <!-- Status Filter -->
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2">Application Status</label>
      <%= f.select :status,
          options_for_select([
            ['Applied', 'applied'],
            ['Reviewing', 'reviewing'],
            ['Shortlisted', 'shortlisted'],
            ['Interviewed', 'interviewed'],
            ['Offered', 'offered'],
            ['Rejected', 'rejected'],
            ['Withdrawn', 'withdrawn']
          ], params[:status]),
          { prompt: "All Statuses" },
          { class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } %>
    </div>

    <!-- Experience Level Filter -->
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2">Experience Level</label>
      <%= f.select :experience_level,
          options_for_select([
            ['Junior', 'junior'],
            ['Mid Level', 'mid'],
            ['Senior Level', 'senior'],
            ['Principal', 'principal'],
            ['C Level', 'c_level']
          ], params[:experience_level]),
          { prompt: "All Experience Levels" },
          { class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } %>
    </div>

    <!-- Role Type Filter -->
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2">Role Type</label>
      <%= f.select :role_type,
          options_for_select([
            ['Part Time Contract', 'part_time_contract'],
            ['Full Time Contract', 'full_time_contract'],
            ['Full Time Employment', 'full_time_employment']
          ], params[:role_type]),
          { prompt: "All Role Types" },
          { class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } %>
    </div>

    <!-- Action Buttons -->
    <div class="flex space-x-2 pt-4">
      <%= f.submit "Apply Filters",
          class: "flex-1 inline-flex justify-center items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>

      <%= link_to "Clear",
          company_candidates_path,
          class: "flex-1 inline-flex justify-center items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  <% end %>
</div>
