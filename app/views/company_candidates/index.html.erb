<div class="min-h-screen bg-gray-50" data-controller="bulk-actions candidate-actions">
  <!-- Header -->
  <div class="bg-white shadow-sm border-b border-gray-200">
    <div class="mx-auto px-4 sm:px-6 lg:px-8">
      <div class="py-6">
        <div class="flex justify-between items-center">
          <div>
            <h1 class="text-2xl font-bold text-gray-900">Candidates</h1>
            <p class="text-sm text-gray-600">Manage and review all candidates</p>
          </div>
          <div class="flex space-x-3">
            <button type="button"
                    class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
                    data-action="click->bulk-actions#toggleSelectAll">
              <span data-bulk-actions-target="selectAllText">Select All</span>
            </button>
            <div class="relative" data-controller="dropdown">
              <button type="button"
                      class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
                      data-action="click->dropdown#toggle">
                Actions
                <%= lucide_icon('chevron-down', class: 'ml-2 h-4 w-4') %>
              </button>
              <div data-dropdown-target="menu"
                   class="hidden absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg ring-1 ring-black ring-opacity-5 z-10">
                <div class="py-1">
                  <button type="button"
                          class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                          data-action="click->bulk-actions#addNote">
                    Add Note
                  </button>
                  <button type="button"
                          class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                          data-action="click->bulk-actions#updateStatus">
                    Update Status
                  </button>
                  <button type="button"
                          class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                          data-action="click->bulk-actions#export">
                    Export
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="flex gap-6">
      <!-- Filters Sidebar -->
      <div class="w-80 flex-shrink-0">
        <%= render 'filters' %>
      </div>

      <!-- Main Content -->
      <div class="flex-1">
        <!-- Search and Sort -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 mb-6">
          <div class="flex items-center justify-between">
            <div class="flex-1 max-w-lg">
              <%= form_with url: company_candidates_path, method: :get, local: true, class: "flex" do |f| %>
                <div class="relative flex-1">
                  <%= f.text_field :search,
                      value: params[:search],
                      placeholder: "Search candidates...",
                      class: "block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md leading-5 bg-white placeholder-gray-500 focus:outline-none focus:placeholder-gray-400 focus:ring-1 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <%= lucide_icon('search', class: 'h-5 w-5 text-gray-400') %>
                  </div>
                </div>
                <%= f.submit "Search", class: "ml-3 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
              <% end %>
            </div>
            <div class="ml-4">
              <%= form_with url: company_candidates_path, method: :get, local: true, class: "flex items-center" do |f| %>
                <%= f.label :sort, "Sort by:", class: "text-sm font-medium text-gray-700 mr-2" %>
                <%= f.select :sort,
                    options_for_select([
                      ['Most Recent', 'recent'],
                      ['Name', 'name'],
                      ['Location', 'location'],
                      ['Applications', 'applications']
                    ], params[:sort]),
                    {},
                    { class: "block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm rounded-md" } %>
                <%= f.submit "Sort", class: "ml-2 inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-gray-600 hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500" %>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Applications List -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200">
          <div class="px-6 py-4 border-b border-gray-200">
            <div class="flex items-center justify-between">
              <h3 class="text-lg font-medium text-gray-900">
                <%= pluralize(@job_applications.count, 'application') %> found
              </h3>
              <div class="flex items-center space-x-2 text-sm text-gray-500">
                <span>Page <%= @pagy.page %> of <%= @pagy.pages %></span>
              </div>
            </div>
          </div>

          <div class="divide-y divide-gray-200">
            <% @job_applications.each do |job_application| %>
              <%= render 'application_card', job_application: job_application %>
            <% end %>
          </div>

          <% if @job_applications.empty? %>
            <%= render 'empty_state' %>
          <% end %>
        </div>

        <!-- Pagination -->
        <div class="mt-6">
          <%= render "shared/pagination", pagy: @pagy %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Bulk Actions Modal -->
<%= render 'bulk_actions_modal' %>
