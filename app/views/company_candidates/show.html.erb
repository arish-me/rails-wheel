<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="py-6">
        <div class="flex justify-between items-center">
          <div>
            <h1 class="text-2xl font-bold text-gray-900">Application Review</h1>
            <p class="text-sm text-gray-600"><%= @job_application.job.title %> at <%= @job_application.job.company.name %></p>
          </div>
          <div class="flex space-x-3">
            <%= link_to company_candidates_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
              <%= lucide_icon('arrow-left', class: 'w-4 h-4 mr-2') %>
              Back to Candidates
            <% end %>
            <%= link_to job_job_application_path(@job_application.job, @job_application), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
              <%= lucide_icon('external-link', class: 'w-4 h-4 mr-2') %>
              View in Job
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Applicant Info -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Applicant Information</h2>
          
          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0">
              <% if @job_application.candidate.user.avatar.attached? %>
                <%= image_tag @job_application.candidate.user.avatar.variant(:small), class: "w-16 h-16 rounded-full" %>
              <% else %>
                <div class="w-16 h-16 bg-gray-200 rounded-full flex items-center justify-center">
                  <span class="text-gray-500 font-semibold text-lg"><%= @job_application.candidate.user.initials %></span>
                </div>
              <% end %>
            </div>
            
            <div class="flex-1">
              <h3 class="text-lg font-medium text-gray-900"><%= @job_application.candidate.user.display_name %></h3>
              <p class="text-gray-600"><%= @job_application.candidate.user.email %></p>
              <p class="text-sm text-gray-500">Applied <%= @job_application.display_applied_date %></p>
                          <% begin %>
              <% if @job_application.candidate.location.present? %>
                <p class="text-sm text-gray-500 mt-1">
                  <%= lucide_icon('map-pin', class: 'w-4 h-4 inline mr-1') %>
                  <%= @job_application.candidate.location.location_search %>
                </p>
              <% end %>
            <% rescue => e %>
              <!-- Location not available -->
            <% end %>
            </div>
          </div>
        </div>

        <!-- Cover Letter -->
        <% if @job_application.cover_letter.present? %>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Cover Letter</h2>
            <div class="prose prose-sm max-w-none break-words">
              <%= simple_format(@job_application.cover_letter) %>
            </div>
          </div>
        <% end %>

        <!-- Resume -->
        <% if @job_application.resume.attached? %>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Resume/CV</h2>
            <div class="flex items-center space-x-3">
              <%= lucide_icon('file-text', class: 'w-8 h-8 text-gray-400') %>
              <div>
                <p class="font-medium text-gray-900"><%= @job_application.resume.filename %></p>
                <p class="text-sm text-gray-500"><%= number_to_human_size(@job_application.resume.byte_size) %></p>
              </div>
              <%= link_to rails_blob_path(@job_application.resume, disposition: 'attachment'),
                  class: "ml-auto inline-flex items-center px-3 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
                <%= lucide_icon('download', class: 'w-4 h-4 mr-2') %>
                Download
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Portfolio -->
        <% if @job_application.portfolio_url.present? %>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Portfolio</h2>
            <%= link_to @job_application.portfolio_url,
                target: "_blank",
                class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
              <%= lucide_icon('external-link', class: 'w-4 h-4 mr-2') %>
              View Portfolio
            <% end %>
          </div>
        <% end %>

        <!-- Additional Notes -->
        <% if @job_application.additional_notes.present? %>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Additional Notes</h2>
            <div class="prose prose-sm max-w-none">
              <%= simple_format(@job_application.additional_notes) %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Application Status -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Application Status</h3>
          
          <div class="space-y-4">
            <!-- Current Status -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Current Status</label>
              <%= render 'status_badge', status: @job_application.status %>
            </div>

            <!-- Status Update Form -->
            <%= form_with url: update_status_company_candidate_path(@job_application), method: :patch, class: "space-y-4" do |f| %>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Update Status</label>
                <%= f.select :status,
                    JobApplication::STATUSES.map { |status| [status.titleize, status] },
                    { selected: @job_application.status },
                    { class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } %>
              </div>

              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Status Notes (Optional)</label>
                <%= f.text_area :status_notes,
                    value: @job_application.status_notes,
                    rows: 3,
                    class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
                    placeholder: "Add any notes about this status change..." %>
              </div>

              <%= f.submit "Update Status",
                  class: "w-full inline-flex justify-center items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
            <% end %>
          </div>
        </div>

        <!-- Application Details -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Application Details</h3>
          
          <div class="space-y-3">
            <div class="flex justify-between">
              <span class="text-gray-600">Application Date</span>
              <span class="font-medium"><%= @job_application.display_applied_date %></span>
            </div>
            
            <% if @job_application.reviewed_at.present? %>
              <div class="flex justify-between">
                <span class="text-gray-600">Last Reviewed</span>
                <span class="font-medium"><%= @job_application.display_reviewed_date %></span>
              </div>
              
              <% if @job_application.reviewed_by.present? %>
                <div class="flex justify-between">
                  <span class="text-gray-600">Reviewed By</span>
                  <span class="font-medium"><%= @job_application.reviewed_by.display_name %></span>
                </div>
              <% end %>
            <% end %>
            
            <div class="flex justify-between">
              <span class="text-gray-600">Views</span>
              <span class="font-medium"><%= @job_application.view_count %></span>
            </div>
            
            <% if @job_application.is_quick_apply %>
              <div class="flex justify-between">
                <span class="text-gray-600">Application Type</span>
                <span class="font-medium text-orange-600">Quick Apply</span>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Candidate Profile -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Candidate Profile</h3>
          
          <div class="space-y-3">
            <% if @job_application.candidate.headline.present? %>
              <div>
                <span class="text-sm font-medium text-gray-700">Headline</span>
                <p class="text-sm text-gray-900 mt-1"><%= @job_application.candidate.headline %></p>
              </div>
            <% end %>
            
            <% if @job_application.candidate.bio.present? %>
              <div>
                <span class="text-sm font-medium text-gray-700">Bio</span>
                <p class="text-sm text-gray-900 mt-1"><%= truncate(@job_application.candidate.bio, length: 150) %></p>
              </div>
            <% end %>
            
            <% if @job_application.candidate.experience.present? %>
              <div class="flex justify-between">
                <span class="text-gray-600">Experience Level</span>
                <span class="font-medium"><%= @job_application.candidate.experience.humanize %></span>
              </div>
            <% end %>
            
            <% if @job_application.candidate.role_types.present? %>
              <div class="flex justify-between">
                <span class="text-gray-600">Role Types</span>
                <span class="font-medium"><%= @job_application.candidate.role_types.to_s.titleize %></span>
              </div>
            <% end %>
            
            <% if @job_application.candidate.search_status.present? %>
              <div class="flex justify-between">
                <span class="text-gray-600">Search Status</span>
                <span class="font-medium"><%= @job_application.candidate.search_status.titleize %></span>
              </div>
            <% end %>
          </div>
          
          <div class="mt-4 pt-4 border-t border-gray-200">
            <%= link_to candidate_path(@job_application.candidate), 
                class: "w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
              <%= lucide_icon('user', class: 'w-4 h-4 mr-2') %>
              View Full Profile
            <% end %>
          </div>
        </div>

        <!-- Actions -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Actions</h3>
          
          <div class="space-y-3">
            <%= link_to job_job_application_path(@job_application.job, @job_application),
                class: "w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
              <%= lucide_icon('eye', class: 'w-4 h-4 mr-2') %>
              View in Job Context
            <% end %>
            
            <%= link_to candidate_path(@job_application.candidate),
                class: "w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
              <%= lucide_icon('user', class: 'w-4 h-4 mr-2') %>
              View Candidate Profile
            <% end %>
            
            <% if @job_application.resume.attached? %>
              <%= link_to rails_blob_path(@job_application.resume, disposition: 'attachment'),
                  class: "w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
                <%= lucide_icon('download', class: 'w-4 h-4 mr-2') %>
                Download Resume
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
