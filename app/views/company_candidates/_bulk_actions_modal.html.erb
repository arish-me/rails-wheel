<!-- Bulk Actions Modal -->
<div data-bulk-actions-target="modal" 
     class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
  <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
    <div class="mt-3">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-medium text-gray-900" data-bulk-actions-target="modalTitle">Bulk Actions</h3>
        <button type="button" 
                class="text-gray-400 hover:text-gray-600"
                data-action="click->bulk-actions#closeModal">
          <%= lucide_icon('x', class: 'h-5 w-5') %>
        </button>
      </div>
      
      <div data-bulk-actions-target="modalContent">
        <!-- Content will be dynamically loaded based on action -->
      </div>
      
      <div class="flex justify-end space-x-3 mt-6">
        <button type="button" 
                class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
                data-action="click->bulk-actions#closeModal">
          Cancel
        </button>
        <button type="button" 
                class="px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
                data-action="click->bulk-actions#executeAction">
          Apply
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Add Note Modal Content Template -->
<template data-bulk-actions-target="addNoteTemplate">
  <div>
    <p class="text-sm text-gray-600 mb-4">Add a note to <span data-bulk-actions-target="selectedCount"></span> selected applications:</p>
    <textarea data-bulk-actions-target="noteText"
              rows="4"
              class="block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
              placeholder="Enter your note here..."></textarea>
  </div>
</template>

<!-- Update Status Modal Content Template -->
<template data-bulk-actions-target="updateStatusTemplate">
  <div>
    <p class="text-sm text-gray-600 mb-4">Update status for <span data-bulk-actions-target="selectedCount"></span> selected applications:</p>
    <select data-bulk-actions-target="statusSelect"
            class="block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
      <option value="">Select status...</option>
      <option value="applied">Applied</option>
      <option value="reviewing">Reviewing</option>
      <option value="shortlisted">Shortlisted</option>
      <option value="interviewed">Interviewed</option>
      <option value="offered">Offered</option>
      <option value="rejected">Rejected</option>
      <option value="withdrawn">Withdrawn</option>
    </select>
  </div>
</template>

<!-- Export Modal Content Template -->
<template data-bulk-actions-target="exportTemplate">
  <div>
    <p class="text-sm text-gray-600 mb-4">Export <span data-bulk-actions-target="selectedCount"></span> selected applications:</p>
    <div class="space-y-3">
      <label class="flex items-center">
        <input type="radio" name="export_format" value="csv" checked
               class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300">
        <span class="ml-2 text-sm text-gray-700">CSV Format</span>
      </label>
      <label class="flex items-center">
        <input type="radio" name="export_format" value="pdf"
               class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300">
        <span class="ml-2 text-sm text-gray-700">PDF Format</span>
      </label>
    </div>
  </div>
</template>
