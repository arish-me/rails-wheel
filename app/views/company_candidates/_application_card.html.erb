<div class="p-6 hover:bg-gray-50 transition-colors duration-150">
  <div class="flex items-start space-x-4">
    <!-- Checkbox -->
    <div class="flex-shrink-0 pt-1">
      <input type="checkbox"
             value="<%= job_application.id %>"
             class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
             data-bulk-actions-target="checkbox"
             data-action="change->bulk-actions#toggleSelection">
    </div>

    <!-- Avatar -->
    <div class="flex-shrink-0">
      <% if job_application.candidate.user.avatar.attached? %>
        <%= image_tag job_application.candidate.user.avatar.variant(:small), class: "w-12 h-12 rounded-full" %>
      <% else %>
        <div class="w-12 h-12 bg-gray-200 rounded-full flex items-center justify-center">
          <span class="text-gray-500 font-semibold text-sm"><%= job_application.candidate.user.initials %></span>
        </div>
      <% end %>
    </div>

    <!-- Application Info -->
    <div class="flex-1 min-w-0">
      <div class="flex items-center justify-between">
        <div>
          <h4 class="text-lg font-medium text-gray-900">
            <%= link_to job_application.candidate.user.display_name, company_candidate_path(job_application), class: "hover:text-blue-600" %>
          </h4>
          <p class="text-sm text-gray-500"><%= job_application.candidate.user.email %></p>
          <p class="text-sm text-gray-600">Applied for: <%= job_application.job.title %></p>
        </div>

        <!-- Actions Dropdown -->
        <div class="relative" data-controller="dropdown">
          <button type="button"
                  class="p-2 text-gray-400 hover:text-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500 rounded-full"
                  data-action="click->dropdown#toggle">
            <%= lucide_icon('more-horizontal', class: 'h-5 w-5') %>
          </button>
          <div data-dropdown-target="menu"
               class="hidden absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg ring-1 ring-black ring-opacity-5 z-10">
            <div class="py-1">
              <%= link_to "View Application", company_candidate_path(job_application),
                  class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
              <button type="button"
                      class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                      data-action="click->candidate-actions#addNote"
                      data-application-id="<%= job_application.id %>">
                Add Note
              </button>
              <button type="button"
                      class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                      data-action="click->candidate-actions#updateStatus"
                      data-application-id="<%= job_application.id %>">
                Update Status
              </button>
              <button type="button"
                      class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                      data-action="click->candidate-actions#viewProfile"
                      data-application-id="<%= job_application.id %>">
                View Profile
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Application Details -->
      <div class="mt-2 flex items-center space-x-4 text-sm text-gray-500">
        <% if job_application.candidate.location.present? %>
          <span class="flex items-center">
            <%= lucide_icon('map-pin', class: 'w-4 h-4 mr-1') %>
            <%= [job_application.candidate.location.city, job_application.candidate.location.state, job_application.candidate.location.country].compact.join(', ') %>
          </span>
        <% end %>

        <% if job_application.candidate.experience.present? %>
          <span class="flex items-center">
            <%= lucide_icon('briefcase', class: 'w-4 h-4 mr-1') %>
            <%= job_application.candidate.experience.humanize %>
          </span>
        <% end %>

        <span class="flex items-center">
          <%= lucide_icon('calendar', class: 'w-4 h-4 mr-1') %>
          Applied <%= time_ago_in_words(job_application.applied_at) %> ago
        </span>
      </div>

      <!-- Application Status and Type -->
      <div class="mt-3 flex items-center space-x-4">
        <span class="text-sm text-gray-600">
          <%= render 'status_badge', status: job_application.status %>
        </span>

        <% if job_application.is_quick_apply %>
          <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-orange-100 text-orange-800">
            Quick Apply
          </span>
        <% end %>
      </div>

      <!-- Status and Tags -->
      <div class="mt-3 flex items-center space-x-2">
        <% if job_application.candidate.search_status.present? %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
            <%= job_application.candidate.search_status.titleize %>
          </span>
        <% end %>

        <% if job_application.candidate.role_types.present? %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
            <%= job_application.candidate.role_types.to_s.titleize %>
          </span>
        <% end %>
      </div>

      <!-- Notes Preview -->
      <% if job_application.status_notes.present? %>
        <div class="mt-3 p-3 bg-yellow-50 border border-yellow-200 rounded-md">
          <p class="text-sm text-yellow-800">
            <strong>Note:</strong> <%= truncate(job_application.status_notes, length: 100) %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>
