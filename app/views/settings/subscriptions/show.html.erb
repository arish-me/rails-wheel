<div class="max-w-4xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">Subscription Management</h1>
    <p class="text-gray-600">Manage your company's subscription and billing</p>
  </div>

  <!-- Status Alert -->
  <% if @subscription %>
    <% if @subscription.subscription_expiring_soon? %>
      <div class="mb-6 bg-amber-50 border border-amber-200 rounded-lg p-4">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-amber-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-amber-800">Subscription Expiring Soon</h3>
            <p class="text-sm text-amber-700 mt-1">
              Your subscription expires in <%= @subscription.days_remaining %> days.
              Contact us to renew and continue using Hiring Wheels.
            </p>
          </div>
        </div>
      </div>
    <% elsif @subscription.expired? %>
      <div class="mb-6 bg-red-50 border border-red-200 rounded-lg p-4">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">Subscription Expired</h3>
            <p class="text-sm text-red-700 mt-1">
              Your subscription has expired. Contact us to reactivate your account.
            </p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Company Information -->
    <div class="lg:col-span-1">
      <div class="bg-white shadow rounded-lg p-6">
        <div class="flex items-center mb-4">
          <div class="flex-shrink-0">
            <div class="w-10 h-10 bg-indigo-100 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
            </div>
          </div>
          <div class="ml-3">
            <h2 class="text-lg font-semibold text-gray-900">Company Info</h2>
          </div>
        </div>
        <div class="space-y-4">
          <div>
            <label class="text-xs font-medium text-gray-500 uppercase tracking-wider">Company Name</label>
            <p class="text-sm font-medium text-gray-900 mt-1"><%= @company.name %></p>
          </div>
          <div>
            <label class="text-xs font-medium text-gray-500 uppercase tracking-wider">Website</label>
            <p class="text-sm text-gray-900 mt-1">
              <a href="<%= @company.website %>" target="_blank" class="text-indigo-600 hover:text-indigo-900">
                <%= @company.website %>
              </a>
            </p>
          </div>
          <div>
            <label class="text-xs font-medium text-gray-500 uppercase tracking-wider">Team Members</label>
            <p class="text-sm font-medium text-gray-900 mt-1"><%= @company.users.count %> users</p>
          </div>
          <div>
            <label class="text-xs font-medium text-gray-500 uppercase tracking-wider">Member Since</label>
            <p class="text-sm text-gray-900 mt-1"><%= @company.created_at.strftime("%B %d, %Y") %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Subscription Information -->
    <div class="lg:col-span-2">
      <div class="bg-white shadow rounded-lg p-6">
        <div class="flex items-center justify-between mb-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-3">
              <h2 class="text-lg font-semibold text-gray-900">Subscription Details</h2>
            </div>
          </div>
          <% if @subscription %>
            <span class="inline-flex px-3 py-1 text-sm font-semibold rounded-full
              <%= case @subscription.status
                  when 'active'
                    'bg-green-100 text-green-800'
                  when 'trial'
                    'bg-amber-100 text-amber-800'
                  when 'expired'
                    'bg-red-100 text-red-800'
                  else
                    'bg-gray-100 text-gray-800'
                  end %>">
              <%= @subscription.status.titleize %>
            </span>
          <% end %>
        </div>

        <% if @subscription %>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="space-y-4">
              <div>
                <label class="text-xs font-medium text-gray-500 uppercase tracking-wider">Plan</label>
                <p class="text-lg font-semibold text-gray-900 mt-1"><%= @subscription.plan_name %></p>
                <p class="text-sm text-gray-600 mt-1"><%= @subscription.plan_description %></p>
              </div>
              <div>
                <label class="text-xs font-medium text-gray-500 uppercase tracking-wider">Price</label>
                <p class="text-2xl font-bold text-gray-900 mt-1"><%= @subscription.display_price %></p>
                <p class="text-sm text-gray-600 mt-1">per month</p>
              </div>
            </div>
            <div class="space-y-4">
              <div>
                <label class="text-xs font-medium text-gray-500 uppercase tracking-wider">Start Date</label>
                <p class="text-sm font-medium text-gray-900 mt-1"><%= @subscription.start_date.strftime("%B %d, %Y") %></p>
              </div>
              <div>
                <label class="text-xs font-medium text-gray-500 uppercase tracking-wider">End Date</label>
                <p class="text-sm font-medium text-gray-900 mt-1"><%= @subscription.end_date.strftime("%B %d, %Y") %></p>
              </div>
              <div>
                <label class="text-xs font-medium text-gray-500 uppercase tracking-wider">Days Remaining</label>
                <p class="text-2xl font-bold <%= @subscription.days_remaining <= 7 ? 'text-red-600' : 'text-gray-900' %> mt-1">
                  <%= @subscription.days_remaining %>
                </p>
                <p class="text-sm text-gray-600 mt-1">days left</p>
              </div>
            </div>
          </div>

          <!-- Features -->
          <div class="mt-8">
            <h3 class="text-sm font-medium text-gray-900 mb-4">Plan Features</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
              <div class="flex items-center">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-sm text-gray-700">Unlimited job postings</span>
              </div>
              <div class="flex items-center">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-sm text-gray-700">Unlimited candidate search</span>
              </div>
              <div class="flex items-center">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-sm text-gray-700">Analytics dashboard</span>
              </div>
              <div class="flex items-center">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-sm text-gray-700">Priority support</span>
              </div>
              <div class="flex items-center">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-sm text-gray-700">API access</span>
              </div>
              <div class="flex items-center">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-sm text-gray-700">Custom branding</span>
              </div>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="mt-8 pt-6 border-t border-gray-200">
            <% if @subscription.subscription_expiring_soon? || @subscription.expired? %>
              <div class="flex flex-col sm:flex-row gap-3">
                <button class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                  Request Renewal
                </button>
                <a href="mailto:support@hiringwheels.com?subject=Subscription Renewal Request - <%= @company.name %>&body=Hi,%0D%0A%0D%0AI would like to request a renewal for our subscription.%0D%0A%0D%0ACompany: <%= @company.name %>%0D%0ACurrent Status: <%= @subscription.status.titleize %>%0D%0ADays Remaining: <%= @subscription.days_remaining %>%0D%0A%0D%0APlease contact me to discuss renewal options.%0D%0A%0D%0AThanks!" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                  </svg>
                  Contact Support
                </a>
              </div>
            <% else %>
              <div class="text-center">
                <p class="text-sm text-gray-600 mb-3">Your subscription is active and in good standing</p>
                <a href="mailto:support@hiringwheels.com?subject=General Inquiry - <%= @company.name %>" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                  </svg>
                  Contact Support
                </a>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8">
            <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-medium text-gray-900 mb-2">No Subscription Found</h3>
            <p class="text-sm text-gray-600 mb-4">It looks like your company doesn't have an active subscription.</p>
            <a href="mailto:support@hiringwheels.com?subject=New Subscription Request - <%= @company.name %>" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              Request Subscription
            </a>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>