<%= content_for :page_title, "Account Settings" %>
<%= settings_section title: "Account", subtitle: "Your settings" do %>

<div class="space-y-6">
  <!-- Email Update Section -->
  <section class="bg-white theme-dark:bg-gray-900 rounded-lg p-4">
    <div class="py-4 px-2 max-w-2xl lg:py-8">
      <h2 class="mb-2 text-xl font-bold text-gray-900 theme-dark:text-white">Email Settings</h2>
      <p class="text-gray-500 theme-dark:text-gray-400 mb-4">Update your email address</p>
      <hr class="h-px mb-4 bg-gray-200 border-0 theme-dark:bg-gray-700">

      <%= form_for(@user, url: registration_path(@user), html: { method: :put, class: "contents" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: @user %>
        <%= f.hidden_field :redirect_to, value: settings_profile_accounts_path %>

        <div class="grid gap-4 sm:grid-cols-2 sm:gap-6">
          <div class="sm:col-span-2">
            <%= f.label :email, "Email", class: "block mb-2 text-sm font-medium text-gray-900 theme-dark:text-white" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 theme-dark:bg-gray-700 theme-dark:border-gray-600 theme-dark:placeholder-gray-400 theme-dark:text-white theme-dark:focus:ring-primary-500 theme-dark:focus:border-primary-500" %>
          </div>

          <div class="sm:col-span-2">
            <%= f.label :current_password, "Current Password", class: "block mb-2 text-sm font-medium text-gray-900 theme-dark:text-white" %>
            <p class="text-sm text-gray-500 theme-dark:text-gray-400 mb-1">(we need your current password to confirm your changes)</p>
            <%= f.password_field :current_password, autocomplete: "current-password", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 theme-dark:bg-gray-700 theme-dark:border-gray-600 theme-dark:placeholder-gray-400 theme-dark:text-white theme-dark:focus:ring-primary-500 theme-dark:focus:border-primary-500" %>
          </div>
        </div>

        <%= f.submit "Update Email" %>
      <% end %>
    </div>
  </section>

  <!-- Password Update Section -->
  <section class="bg-white theme-dark:bg-gray-900 rounded-lg p-4">
    <div class="py-4 px-2 max-w-2xl lg:py-8">
      <h2 class="mb-2 text-xl font-bold text-gray-900 theme-dark:text-white">Password Settings</h2>
      <p class="text-gray-500 theme-dark:text-gray-400 mb-4">Update your password</p>
      <hr class="h-px mb-4 bg-gray-200 border-0 theme-dark:bg-gray-700">

      <%= form_for(@user, as: @user, url: registration_path(@user), html: { method: :put, class: "contents" }) do |f| %>
        <%= f.hidden_field :redirect_to, value: "settings_accounts_path" %>

        <div class="grid gap-4 sm:grid-cols-2 sm:gap-6">
          <div class="sm:col-span-2">
            <%= f.label :password, "New Password", class: "block mb-2 text-sm font-medium text-gray-900 theme-dark:text-white" %>
            <p class="text-sm text-gray-500 theme-dark:text-gray-400 mb-1">(leave blank if you don't want to change it)</p>
            <%= f.password_field :password, autocomplete: "new-password", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 theme-dark:bg-gray-700 theme-dark:border-gray-600 theme-dark:placeholder-gray-400 theme-dark:text-white theme-dark:focus:ring-primary-500 theme-dark:focus:border-primary-500" %>
            <% if @minimum_password_length %>
              <p class="text-xs text-gray-500 theme-dark:text-gray-400 mt-1"><em><%= @minimum_password_length %> characters minimum</em></p>
            <% end %>
          </div>

          <div class="sm:col-span-2">
            <%= f.label :password_confirmation, "Password Confirmation", class: "block mb-2 text-sm font-medium text-gray-900 theme-dark:text-white" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 theme-dark:bg-gray-700 theme-dark:border-gray-600 theme-dark:placeholder-gray-400 theme-dark:text-white theme-dark:focus:ring-primary-500 theme-dark:focus:border-primary-500" %>
          </div>

          <div class="sm:col-span-2">
            <%= f.label :current_password, "Current Password", class: "block mb-2 text-sm font-medium text-gray-900 theme-dark:text-white" %>
            <p class="text-sm text-gray-500 theme-dark:text-gray-400 mb-1">(we need your current password to confirm your changes)</p>
            <%= f.password_field :current_password, autocomplete: "current-password", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 theme-dark:bg-gray-700 theme-dark:border-gray-600 theme-dark:placeholder-gray-400 theme-dark:text-white theme-dark:focus:ring-primary-500 theme-dark:focus:border-primary-500" %>
          </div>
        </div>

        <%= f.submit "Update Password", class: "inline-flex items-center px-5 py-2.5 mt-4 sm:mt-6 text-sm font-medium text-center text-white mb-4 rounded-lg btn btn--primary w-full" %>
      <% end %>
    </div>
  </section>

  <!-- Account Deletion Section -->
  <section class="bg-white theme-dark:bg-gray-900 rounded-lg p-4">
    <div class="py-4 px-2 max-w-2xl lg:py-8">
      <h2 class="mb-2 text-xl font-bold text-gray-900 theme-dark:text-white">Danger Zone</h2>
      <p class="text-gray-500 theme-dark:text-gray-400 mb-4">Permanently delete your account</p>
      <hr class="h-px mb-4 bg-gray-200 border-0 theme-dark:bg-gray-700">

      <div class="inline-flex space-x-2">
        <p class="items-center px-5 py-2.5 text-sm text-gray-500 theme-dark:text-gray-400 mb-4">Unhappy?</p>
        <%= form_for(@user, as: @user, url: registration_path(@user), html: { method: :delete, class: "contents" }) do |f| %>
          <%= f.hidden_field :redirect_to, value: "settings_accounts_path" %>
          <%= f.submit "Cancel my account", data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, class: "items-center px-5 py-2.5 text-sm font-medium text-center text-white bg-red-600 rounded-lg focus:ring-4 focus:ring-red-200 theme-dark:focus:ring-red-900 hover:bg-red-700" %>
        <% end %>
      </div>
    </div>
  </section>
</div>

<% end %>