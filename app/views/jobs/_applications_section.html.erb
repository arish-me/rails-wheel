<div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
  <div class="px-4 py-3 bg-gradient-to-r from-emerald-50 to-teal-50 border-b border-gray-200">
    <div class="flex justify-between items-center">
      <h3 class="text-base font-semibold text-gray-900">Applications (<%= @job.applications_count %>)</h3>
      <%= link_to job_job_applications_path(@job),
          class: "text-xs text-blue-600 hover:text-blue-800 font-medium" do %>
        View All Applications
      <% end %>
    </div>
  </div>
  <div class="p-4">
    <% if @job.applications_count > 0 %>
      <div class="space-y-3">
        <% @job.recent_applications(limit: 3).each do |application| %>
          <div class="border border-gray-200 rounded-lg p-2 hover:bg-gray-50 transition-colors duration-200">
            <div class="flex justify-between items-start">
              <div class="flex-1 min-w-0">
                <div class="flex items-center mb-1">
                  <h4 class="font-semibold text-gray-900 text-sm truncate">
                    <%= link_to application.candidate.full_name, job_job_application_path(@job, application), class: "hover:text-blue-600 transition-colors duration-200" %>
                  </h4>
                  <span class="text-xs text-gray-500 ml-1">â€¢</span>
                  <span class="text-xs text-gray-600 ml-1 truncate"><%= application.user.email %></span>
                </div>
                <div class="flex items-center space-x-2 text-xs text-gray-500">
                  <span class="flex items-center">
                    <%= lucide_icon('calendar', class: 'w-3 h-3 mr-1') %>
                    <%= time_ago_in_words(application.applied_at) %> ago
                  </span>
                  <span class="flex items-center">
                    <%= lucide_icon('eye', class: 'w-3 h-3 mr-1') %>
                    <%= pluralize(application.view_count, 'view') %>
                  </span>
                </div>
              </div>

              <div class="ml-2 flex-shrink-0">
                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium 
                  <%= case application.status
                      when 'applied'
                        'bg-blue-100 text-blue-800'
                      when 'reviewing'
                        'bg-yellow-100 text-yellow-800'
                      when 'interviewing'
                        'bg-purple-100 text-purple-800'
                      when 'offered'
                        'bg-green-100 text-green-800'
                      when 'hired'
                        'bg-emerald-100 text-emerald-800'
                      when 'rejected'
                        'bg-red-100 text-red-800'
                      when 'withdrawn'
                        'bg-gray-100 text-gray-800'
                      else
                        'bg-gray-100 text-gray-800'
                      end %>">
                  <%= application.status.titleize %>
                </span>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-6">
        <div class="mx-auto h-8 w-8 text-gray-400">
          <%= lucide_icon('users', class: 'h-8 w-8') %>
        </div>
        <h4 class="mt-2 text-sm font-medium text-gray-900">No applications yet</h4>
        <p class="mt-1 text-xs text-gray-500">Applications will appear here once candidates start applying.</p>
      </div>
    <% end %>
  </div>
</div>
