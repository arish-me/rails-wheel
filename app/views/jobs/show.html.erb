<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Job Header -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-8 mb-8">
      <% if @job.errors.any? %>
        <%= render "shared/form_errors" , model: @job %>
      <% end %>

      <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between mb-6">
        <div class="flex-1 mb-6 lg:mb-0">
          <div class="flex items-center mb-4">
            <% if @job.company.avatar.attached? %>
              <%= image_tag @job.company.avatar, class: "w-16 h-16 rounded-xl mr-4 shadow-sm" %>
            <% else %>
              <div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-blue-600 rounded-xl flex items-center justify-center shadow-sm mr-4">
                <span class="text-white text-xl font-bold"><%= @job.company.name.first %></span>
              </div>
            <% end %>
            <div>
              <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @job.title %></h1>
              <p class="text-xl text-gray-600 font-medium"><%= @job.company.name %></p>
            </div>
          </div>
        </div>

        <div class="flex flex-col sm:flex-row items-start sm:items-center space-y-3 sm:space-y-0 sm:space-x-4">
          <% case @job.status %>
          <% when 'published' %>
            <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold bg-green-100 text-green-800">
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              Published
            </span>
          <% when 'draft' %>
            <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold bg-gray-100 text-gray-800">
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
              </svg>
              Draft
            </span>
          <% when 'closed' %>
            <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold bg-red-100 text-red-800">
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
              Closed
            </span>
          <% end %>

          <% if @job.featured? %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-yellow-100 text-yellow-800">
              <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
              Featured
            </span>
          <% end %>
        </div>
      </div>

      <!-- Job Meta -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="flex items-center p-4 bg-gray-50 rounded-lg">
          <div class="flex-shrink-0 w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center mr-2">
            <%= lucide_icon('briefcase', class: 'w-5 h-5 text-blue-600') %>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-500">Job Type</p>
            <p class="text-base font-semibold text-gray-900"><%= @job.role_type&.titleize || 'Not specified' %></p>
          </div>
        </div>

        <div class="flex items-center p-4 bg-gray-50 rounded-lg">
          <div class="flex-shrink-0 w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center mr-2">
            <%= lucide_icon('map-pin', class: 'w-5 h-5 text-green-600') %>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-500">Location</p>
            <p class="text-base font-semibold text-gray-900">
              <% if @job.worldwide? %>
                <span class="inline-flex items-center">
                  <%= lucide_icon('globe', class: 'w-4 h-4 mr-1 text-blue-600') %>
                  Worldwide
                </span>
              <% else %>
                <%= @job.location.job_location.presence || 'Remote' %>
              <% end %>
            </p>
          </div>
        </div>

        <div class="flex items-center p-4 bg-gray-50 rounded-lg">
          <div class="flex-shrink-0 w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center mr-2">
            <%= lucide_icon('users', class: 'w-5 h-5 text-purple-600') %>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-500">Experience</p>
            <p class="text-base font-semibold text-gray-900"><%= @job.display_experience_level %></p>
          </div>
        </div>

        <div class="flex items-center p-4 bg-gray-50 rounded-lg">
          <div class="flex-shrink-0 w-10 h-10 bg-indigo-100 rounded-lg flex items-center justify-center mr-2">
            <%= lucide_icon('wifi', class: 'w-5 h-5 text-indigo-600') %>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-500">Remote Policy</p>
            <p class="text-base font-semibold text-gray-900"><%= @job.remote_policy&.titleize || 'Not specified' %></p>
          </div>
        </div>

        <% if @job.salary_min.present? || @job.salary_max.present? %>
          <div class="flex items-center p-4 bg-gray-50 rounded-lg">
            <div class="flex-shrink-0 w-10 h-10 bg-yellow-100 rounded-lg flex items-center justify-center mr-2">
              <%= lucide_icon('dollar-sign', class: 'w-5 h-5 text-yellow-600') %>
            </div>
            <div>
              <p class="text-sm font-medium text-gray-500">Salary</p>
              <p class="text-base font-semibold text-gray-900"><%= @job.display_salary %></p>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row items-start sm:items-center space-y-3 sm:space-y-0 sm:space-x-4">
        <% if current_user.company == @job.company %>
          <div class="flex flex-wrap items-center space-x-3">
            <% if can?(:edit, Job) %>
              <%= link_to edit_job_path(@job),
                  class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200",
                  data: { } do %>
                <%= lucide_icon('edit', class: 'w-4 h-4 mr-2') %>
                Edit Job
              <% end %>
            <% end %>

            <% if @job.draft? && can?(:publish, @job) %>
              <%= link_to publish_job_path(@job),
                  method: :patch,
                  class: "inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors duration-200",
                  data: { turbo_method: :patch } do %>
                <%= lucide_icon('send', class: 'w-4 h-4 mr-2') %>
                Publish Job
              <% end %>
            <% end %>

            <% if @job.published? && can?(:close, @job) %>
              <%= link_to close_job_path(@job),
                  method: :patch,
                  class: "inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors duration-200",
                  data: { turbo_method: :patch } do %>
                <%= lucide_icon('x-circle', class: 'w-4 h-4 mr-2') %>
                Close Job
              <% end %>
            <% end %>

            <%= link_to job_job_applications_path(@job),
                class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200" do %>
              <%= lucide_icon('users', class: 'w-4 h-4 mr-2') %>
              View Applications (<%= @job.applications_count %>)
            <% end %>
          </div>
        <% else %>
          <% if @job.can_be_applied_to? && current_user.candidate.present? %>
            <%= link_to new_job_job_application_path(@job),
                class: "inline-flex items-center px-6 py-3 border border-transparent rounded-lg shadow-sm text-base font-semibold text-white bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200" do %>
              <%= lucide_icon('send', class: 'w-5 h-5 mr-2') %>
              Apply Now
            <% end %>
          <% elsif !current_user.candidate.present? %>
            <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm text-yellow-800">
                    You need to complete your candidate profile to apply for this job.
                  </p>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- Job Content -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-8">
        <!-- Description -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <div class="px-6 py-4 bg-gradient-to-r from-blue-50 to-indigo-50 border-b border-gray-200">
            <h2 class="text-xl font-semibold text-gray-900">Job Description</h2>
          </div>
          <div class="p-6">
            <div class="prose max-w-none">
              <%== @job.description %>
            </div>
          </div>
        </div>

        <!-- Requirements -->
        <% if @job.requirements.present? %>
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
            <div class="px-6 py-4 bg-gradient-to-r from-green-50 to-emerald-50 border-b border-gray-200">
              <h2 class="text-xl font-semibold text-gray-900">Requirements</h2>
            </div>
            <div class="p-6">
              <div class="prose max-w-none">
                <%== @job.requirements %>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Benefits -->
        <% if @job.benefits.present? %>
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
            <div class="px-6 py-4 bg-gradient-to-r from-yellow-50 to-amber-50 border-b border-gray-200">
              <h2 class="text-xl font-semibold text-gray-900">Benefits & Perks</h2>
            </div>
            <div class="p-6">
              <div class="prose max-w-none">
                <%== @job.benefits %>
              </div>
            </div>
          </div>
        <% end %>

              <!-- Application Instructions -->
        <% if @job.application_instructions.present? %>
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
            <div class="px-6 py-4 bg-gradient-to-r from-orange-50 to-red-50 border-b border-gray-200">
              <h3 class="text-lg font-semibold text-gray-900">Application Instructions</h3>
            </div>
            <div class="p-6">
              <div class="prose prose-sm max-w-none break-words">
                <%== @job.application_instructions %>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Skills and Specializations -->
        <% if @job.skills.any? || @job.candidate_roles.any? %>
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
            <div class="px-6 py-4 bg-gradient-to-r from-purple-50 to-pink-50 border-b border-gray-200">
              <h2 class="text-xl font-semibold text-gray-900">Skills & Specializations</h2>
            </div>
            <div class="p-6">
              <% if @job.skills.any? %>
                <div class="mb-6">
                  <h3 class="text-lg font-semibold text-gray-900 mb-3">Required Skills</h3>
                  <div class="flex flex-wrap gap-2">
                    <% @job.skills.each do |skill| %>
                      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                        <%= skill.name %>
                      </span>
                    <% end %>
                  </div>
                </div>
              <% end %>

              <% if @job.candidate_roles.any? %>
                <div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-3">Role Specializations</h3>
                  <div class="flex flex-wrap gap-2">
                    <% @job.candidate_roles.each do |role| %>
                      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                        <%= role.name %>
                      </span>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Sidebar -->
      <div class="space-y-8">
        <!-- Company Info -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <div class="px-6 py-4 bg-gradient-to-r from-gray-50 to-gray-100 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900">Company</h3>
          </div>
          <div class="p-6">
            <div class="flex items-center space-x-4 mb-4">
              <% if @job.company.avatar.attached? %>
                <%= image_tag @job.company.avatar, class: "w-16 h-16 rounded-xl shadow-sm" %>
              <% else %>
                <div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-blue-600 rounded-xl flex items-center justify-center shadow-sm">
                  <span class="text-white text-xl font-bold"><%= @job.company.name.first %></span>
                </div>
              <% end %>
              <div>
                <p class="font-semibold text-gray-900 text-lg"><%= @job.company.name %></p>
                <% if @job.company.website.present? %>
                  <a href="<%= @job.company.website %>" target="_blank" class="text-blue-600 hover:text-blue-800 text-sm">
                    <%= @job.company.website %>
                  </a>
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <!-- Job Stats -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <div class="px-6 py-4 bg-gradient-to-r from-indigo-50 to-blue-50 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900">Job Statistics</h3>
          </div>
          <div class="p-6">
            <div class="space-y-4">
              <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                <div class="flex items-center">
                  <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center mr-3">
                    <%= lucide_icon('users', class: 'w-4 h-4 text-blue-600') %>
                  </div>
                  <span class="text-gray-700 font-medium">Applications</span>
                </div>
                <span class="text-lg font-bold text-gray-900"><%= @job.applications_count %></span>
              </div>

              <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                <div class="flex items-center">
                  <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center mr-3">
                    <%= lucide_icon('eye', class: 'w-4 h-4 text-green-600') %>
                  </div>
                  <span class="text-gray-700 font-medium">Views</span>
                </div>
                <span class="text-lg font-bold text-gray-900"><%= @job.views_count %></span>
              </div>

              <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                <div class="flex items-center">
                  <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center mr-3">
                    <%= lucide_icon('calendar', class: 'w-4 h-4 text-purple-600') %>
                  </div>
                  <span class="text-gray-700 font-medium">Posted</span>
                </div>
                <span class="text-sm font-medium text-gray-900"><%= time_ago_in_words(@job.created_at) %> ago</span>
              </div>

              <% if @job.expires_at.present? %>
                <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                  <div class="flex items-center">
                    <div class="w-8 h-8 bg-yellow-100 rounded-lg flex items-center justify-center mr-3">
                      <%= lucide_icon('clock', class: 'w-4 h-4 text-yellow-600') %>
                    </div>
                    <span class="text-gray-700 font-medium">Expires</span>
                  </div>
                  <span class="text-sm font-medium text-gray-900"><%= @job.expires_at.strftime('%B %d, %Y') %></span>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Recent Applications (for company users) -->
        <% if current_user.company == @job.company && @recent_applications.any? %>
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
            <div class="px-6 py-4 bg-gradient-to-r from-emerald-50 to-teal-50 border-b border-gray-200">
              <h3 class="text-lg font-semibold text-gray-900">Recent Applications</h3>
            </div>
            <div class="p-6">
              <div class="space-y-4">
                <% @recent_applications.each do |application| %>
                  <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                    <div>
                      <p class="font-semibold text-gray-900"><%= application.user.display_name %></p>
                      <p class="text-sm text-gray-600"><%= application.display_applied_date %></p>
                    </div>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                      <%= application.display_status %>
                    </span>
                  </div>
                <% end %>
              </div>
              <%= link_to "View All Applications", job_job_applications_path(@job),
                  class: "mt-4 inline-flex items-center text-sm font-medium text-blue-600 hover:text-blue-800 transition-colors duration-200" do %>
                View All Applications
                <%= lucide_icon('arrow-right', class: 'w-4 h-4 ml-1') %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
