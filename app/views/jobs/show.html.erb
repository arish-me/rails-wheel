<div class="min-h-screen bg-gray-50 py-6">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Job Header -->
    <%= render 'job_header' %>

    <!-- Job Content -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Description -->
        <%= render 'job_content_section', 
            title: 'Job Description', 
            color: 'blue', 
            content: @job.description %>

        <!-- Requirements -->
        <% if @job.requirements.present? %>
          <%= render 'job_content_section', 
              title: 'Requirements', 
              color: 'green', 
              content: @job.requirements %>
        <% end %>

        <!-- Benefits -->
        <% if @job.benefits.present? %>
          <%= render 'job_content_section', 
              title: 'Benefits & Perks', 
              color: 'yellow', 
              content: @job.benefits %>
        <% end %>

        <!-- Application Instructions -->
        <% if @job.application_instructions.present? %>
          <%= render 'job_content_section', 
              title: 'Application Instructions', 
              color: 'orange', 
              content: @job.application_instructions %>
        <% end %>

        <!-- Skills and Specializations -->
        <% if @job.skills.any? || @job.candidate_roles.any? %>
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
            <div class="px-4 py-3 bg-gradient-to-r from-purple-50 to-pink-50 border-b border-gray-200">
              <h2 class="text-lg font-semibold text-gray-900">Skills & Specializations</h2>
            </div>
            <div class="p-4">
              <% if @job.skills.any? %>
                <div class="mb-4">
                  <h3 class="text-base font-semibold text-gray-900 mb-2">Required Skills</h3>
                  <div class="flex flex-wrap gap-2">
                    <% @job.skills.each do |skill| %>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                        <%= skill.name %>
                      </span>
                    <% end %>
                  </div>
                </div>
              <% end %>

              <% if @job.candidate_roles.any? %>
                <div>
                  <h3 class="text-base font-semibold text-gray-900 mb-2">Role Specializations</h3>
                  <div class="flex flex-wrap gap-2">
                    <% @job.candidate_roles.each do |role| %>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        <%= role.name %>
                      </span>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Company Info -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <div class="px-4 py-3 bg-gradient-to-r from-gray-50 to-gray-100 border-b border-gray-200">
            <h3 class="text-base font-semibold text-gray-900">Company</h3>
          </div>
          <div class="p-4">
            <div class="flex items-center space-x-3 mb-3">
              <% if @job.company.avatar.attached? %>
                <%= image_tag @job.company.avatar, class: "w-12 h-12 rounded-lg shadow-sm" %>
              <% else %>
                <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-blue-600 rounded-lg flex items-center justify-center shadow-sm">
                  <span class="text-white text-lg font-bold"><%= @job.company.name.first %></span>
                </div>
              <% end %>
              <div>
                <p class="font-semibold text-gray-900 text-base"><%= @job.company.name %></p>
                <% if @job.company.website.present? %>
                  <a href="<%= @job.company.website %>" target="_blank" class="text-blue-600 hover:text-blue-800 text-xs">
                    <%= @job.company.website %>
                  </a>
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <!-- Job Statistics -->
        <%= render 'job_statistics' %>

        <!-- Applications Section (for company users) -->
        <% if current_user.company == @job.company && @job.job_applications.any? %>
          <%= render 'applications_section' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
