<div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-6">
  <% if @job.errors.any? %>
    <%= render "shared/form_errors", model: @job %>
  <% end %>

  <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between mb-4">
    <div class="flex-1 mb-4 lg:mb-0">
      <div class="flex items-center mb-3">
        <% if @job.company.avatar.attached? %>
          <%= image_tag @job.company.avatar, class: "w-12 h-12 rounded-lg mr-3 shadow-sm" %>
        <% else %>
          <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-blue-600 rounded-lg flex items-center justify-center shadow-sm mr-3">
            <span class="text-white text-lg font-bold"><%= @job.company.name.first %></span>
          </div>
        <% end %>
        <div>
          <h1 class="text-xl font-bold text-gray-900 mb-1"><%= @job.title %></h1>
          <p class="text-sm text-gray-600 font-medium"><%= @job.company.name %></p>
        </div>
      </div>
    </div>

    <div class="flex flex-col sm:flex-row items-start sm:items-center space-y-2 sm:space-y-0 sm:space-x-3">
      <% case @job.status %>
      <% when 'published' %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-green-100 text-green-800">
          <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          Published
        </span>
      <% when 'draft' %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-gray-100 text-gray-800">
          <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
          </svg>
          Draft
        </span>
      <% when 'closed' %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-red-100 text-red-800">
          <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
          Closed
        </span>
      <% end %>

      <% if @job.featured? %>
        <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-semibold bg-yellow-100 text-yellow-800">
          <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
          </svg>
          Featured
        </span>
      <% end %>
    </div>
  </div>

  <!-- Job Meta -->
  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 mb-6">
    <div class="flex items-center p-3 bg-gray-50 rounded-lg">
      <div class="flex-shrink-0 w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center mr-2">
        <%= lucide_icon('briefcase', class: 'w-4 h-4 text-blue-600') %>
      </div>
      <div>
        <p class="text-xs font-medium text-gray-500">Job Type</p>
        <p class="text-sm font-semibold text-gray-900"><%= @job.role_type&.titleize || 'Not specified' %></p>
      </div>
    </div>

    <div class="flex items-center p-3 bg-gray-50 rounded-lg">
      <div class="flex-shrink-0 w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center mr-2">
        <%= lucide_icon('map-pin', class: 'w-4 h-4 text-green-600') %>
      </div>
      <div>
        <p class="text-xs font-medium text-gray-500">Location</p>
        <p class="text-sm font-semibold text-gray-900">
          <% if @job.worldwide? %>
            <span class="inline-flex items-center">
              <%= lucide_icon('globe', class: 'w-3 h-3 mr-1 text-blue-600') %>
              Worldwide
            </span>
          <% else %>
            <%= @job.location&.job_location.presence || 'Remote' %>
          <% end %>
        </p>
      </div>
    </div>

    <div class="flex items-center p-3 bg-gray-50 rounded-lg">
      <div class="flex-shrink-0 w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center mr-2">
        <%= lucide_icon('users', class: 'w-4 h-4 text-purple-600') %>
      </div>
      <div>
        <p class="text-xs font-medium text-gray-500">Experience</p>
        <p class="text-sm font-semibold text-gray-900"><%= @job.display_experience_level %></p>
      </div>
    </div>

    <% if @job.salary_min.present? || @job.salary_max.present? %>
      <div class="flex items-center p-3 bg-gray-50 rounded-lg">
        <div class="flex-shrink-0 w-8 h-8 bg-yellow-100 rounded-lg flex items-center justify-center mr-2">
          <%= lucide_icon('dollar-sign', class: 'w-4 h-4 text-yellow-600') %>
        </div>
        <div>
          <p class="text-xs font-medium text-gray-500">Salary</p>
          <p class="text-sm font-semibold text-gray-900"><%= @job.display_salary %></p>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Action Buttons -->
  <div class="flex flex-col sm:flex-row items-start sm:items-center space-y-2 sm:space-y-0 sm:space-x-3">
    <%= link_to edit_job_path(@job),
        class: "inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-semibold text-white bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200" do %>
      <%= lucide_icon('edit', class: 'w-4 h-4 mr-2') %>
      Edit Job
    <% end %>

    <%= link_to public_job_path(@job),
        target: "_blank",
        class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200" do %>
      <%= lucide_icon('external-link', class: 'w-4 h-4 mr-2') %>
      View Public Page
    <% end %>

    <%= link_to jobs_path,
        class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200" do %>
      <%= lucide_icon('arrow-left', class: 'w-4 h-4 mr-2') %>
      Back to Jobs
    <% end %>
  </div>
</div>
