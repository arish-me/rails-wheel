<div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
  <div class="px-4 py-3 bg-gradient-to-r from-indigo-50 to-blue-50 border-b border-gray-200">
    <h3 class="text-base font-semibold text-gray-900">Job Statistics</h3>
  </div>
  <div class="p-4">
    <div class="grid grid-cols-2 gap-3">
      <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
        <div class="flex items-center min-w-0 flex-1">
          <div class="w-7 h-7 bg-blue-100 rounded-lg flex items-center justify-center mr-2 flex-shrink-0">
            <%= lucide_icon('users', class: 'w-3 h-3 text-blue-600') %>
          </div>
          <span class="text-xs text-gray-700 font-medium">Applications</span>
        </div>
        <span class="text-base font-bold text-gray-900 flex-shrink-0 ml-2"><%= @job.applications_count %></span>
      </div>

      <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
        <div class="flex items-center min-w-0 flex-1">
          <div class="w-7 h-7 bg-green-100 rounded-lg flex items-center justify-center mr-2 flex-shrink-0">
            <%= lucide_icon('eye', class: 'w-3 h-3 text-green-600') %>
          </div>
          <span class="text-xs text-gray-700 font-medium">Views</span>
        </div>
        <span class="text-base font-bold text-gray-900 flex-shrink-0 ml-2"><%= @job.views_count %></span>
      </div>

      <div class="flex flex-col items-center p-3 bg-gray-50 rounded-lg">
        <div class="w-7 h-7 bg-purple-100 rounded-lg flex items-center justify-center mb-2">
          <%= lucide_icon('calendar', class: 'w-3 h-3 text-purple-600') %>
        </div>
        <span class="text-xs text-gray-700 font-medium text-center">Posted</span>
        <span class="text-xs font-medium text-gray-900 text-center mt-1"><%= time_ago_in_words(@job.created_at) %></span>
      </div>

      <% if @job.published_at.present? %>
        <div class="flex flex-col items-center p-3 bg-gray-50 rounded-lg">
          <div class="w-7 h-7 bg-yellow-100 rounded-lg flex items-center justify-center mb-2">
            <%= lucide_icon('clock', class: 'w-3 h-3 text-yellow-600') %>
          </div>
          <span class="text-xs text-gray-700 font-medium text-center">Published</span>
          <span class="text-xs font-medium text-gray-900 text-center mt-1"><%= time_ago_in_words(@job.published_at) %></span>
        </div>
      <% end %>
    </div>
  </div>
</div>
