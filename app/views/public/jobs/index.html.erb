<div class="min-h-screen bg-gray-50">
  <!-- Hero Section -->
  <div class="bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="text-center">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Find Your Next Opportunity</h1>
        <p class="text-xl text-gray-600 mb-8">Discover thousands of jobs from top companies</p>
        
        <!-- Search Bar -->
        <%= form_with url: public_jobs_path, method: :get, class: "max-w-2xl mx-auto" do |f| %>
          <div class="flex shadow-sm rounded-lg overflow-hidden">
            <%= f.text_field :search, 
                value: @filters[:search],
                placeholder: "Search jobs, companies, or keywords...",
                class: "flex-1 px-4 py-3 text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
            <%= f.submit "Search", 
                class: "px-6 py-3 bg-blue-600 text-white font-medium hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex flex-col lg:flex-row gap-8">
      <!-- Filters Sidebar -->
      <div class="lg:w-1/4">
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 sticky top-4">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Filters</h3>
          
          <%= form_with url: public_jobs_path, method: :get, local: true, class: "space-y-6" do |f| %>
            <!-- Hidden search field to preserve search -->
            <%= f.hidden_field :search, value: @filters[:search] if @filters[:search].present? %>
            
            <!-- Job Type -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Job Type</label>
              <%= f.select :job_type, 
                  options_for_select([['All Types', '']] + Job::JOB_TYPES.map { |type| [type.titleize, type] }, @filters[:job_type]),
                  {},
                  { class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } %>
            </div>

            <!-- Experience Level -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Experience Level</label>
              <%= f.select :experience_level, 
                  options_for_select([['All Levels', '']] + Job::EXPERIENCE_LEVELS.map { |level| [level.titleize, level] }, @filters[:experience_level]),
                  {},
                  { class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } %>
            </div>

            <!-- Remote Policy -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Remote Policy</label>
              <%= f.select :remote_policy, 
                  options_for_select([['All Policies', '']] + Job::REMOTE_POLICIES.map { |policy| [policy.titleize, policy] }, @filters[:remote_policy]),
                  {},
                  { class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } %>
            </div>

            <!-- Location -->
            <% if @locations.any? %>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Location</label>
                <%= f.select :location, 
                    options_for_select([['All Locations', '']] + @locations, @filters[:location]),
                    {},
                    { class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } %>
              </div>
            <% end %>

            <!-- Company -->
            <% if @companies.any? %>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Company</label>
                <%= f.select :company_id, 
                    options_for_select([['All Companies', '']] + @companies.map { |company| [company.name, company.id] }, @filters[:company_id]),
                    {},
                    { class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } %>
              </div>
            <% end %>

            <!-- Featured Jobs -->
            <div class="flex items-center">
              <%= f.check_box :featured, { checked: @filters[:featured] == 'true', class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" } %>
              <%= f.label :featured, "Featured Jobs Only", class: "ml-2 block text-sm text-gray-900" %>
            </div>

            <!-- Sort -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Sort By</label>
              <%= f.select :sort, 
                  options_for_select([
                    ['Newest First', 'newest'],
                    ['Oldest First', 'oldest'],
                    ['Highest Salary', 'salary_high'],
                    ['Lowest Salary', 'salary_low'],
                    ['Most Applications', 'applications']
                  ], @filters[:sort]),
                  {},
                  { class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } %>
            </div>

            <!-- Apply Filters -->
            <div class="pt-4">
              <%= f.submit "Apply Filters", 
                  class: "w-full bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
            </div>

            <!-- Clear Filters -->
            <%= link_to "Clear All Filters", public_jobs_path, 
                class: "block w-full text-center text-gray-600 hover:text-gray-800 mt-2 text-sm" %>
          <% end %>
        </div>
      </div>

      <!-- Jobs List -->
      <div class="lg:w-3/4">
        <!-- Results Header -->
        <div class="flex justify-between items-center mb-6">
          <div>
            <h2 class="text-2xl font-bold text-gray-900">
              <% if @filters[:search].present? %>
                Search Results for "<%= @filters[:search] %>"
              <% else %>
                All Jobs
              <% end %>
            </h2>
            <p class="text-gray-600"><%= @pagy.count %> jobs found</p>
          </div>
          
          <% if user_signed_in? && current_user.candidate.present? %>
            <%= link_to "Post a Job", new_job_path, 
                class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700" %>
          <% end %>
        </div>

        <!-- Jobs Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <% @jobs.each do |job| %>
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 hover:shadow-md transition-shadow">
              <div class="p-6">
                <!-- Job Header -->
                <div class="flex justify-between items-start mb-4">
                  <div class="flex-1">
                    <h3 class="text-lg font-semibold text-gray-900 line-clamp-2">
                      <%= link_to job.title, public_job_path(job), class: "hover:text-blue-600" %>
                    </h3>
                    <p class="text-sm text-gray-600 mt-1"><%= job.company.name %></p>
                  </div>
                  
                  <% if job.featured? %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                      Featured
                    </span>
                  <% end %>
                </div>

                <!-- Job Details -->
                <div class="space-y-3 mb-4">
                  <div class="flex items-center text-sm text-gray-600">
                    <%= lucide_icon('briefcase', class: 'w-4 h-4 mr-2') %>
                    <%= job.display_job_type %>
                  </div>

                  <div class="flex items-center text-sm text-gray-600">
                    <%= lucide_icon('map-pin', class: 'w-4 h-4 mr-2') %>
                    <%= job.display_location.presence || 'Remote' %>
                  </div>

                  <div class="flex items-center text-sm text-gray-600">
                    <%= lucide_icon('users', class: 'w-4 h-4 mr-2') %>
                    <%= job.display_experience_level %>
                  </div>

                  <% if job.salary_min.present? || job.salary_max.present? %>
                    <div class="flex items-center text-sm text-gray-600">
                      <%= lucide_icon('dollar-sign', class: 'w-4 h-4 mr-2') %>
                      <%= job.display_salary %>
                    </div>
                  <% end %>
                </div>

                <!-- Job Meta -->
                <div class="flex justify-between items-center pt-4 border-t border-gray-200">
                  <div class="flex items-center space-x-4 text-xs text-gray-500">
                    <span><%= lucide_icon('clock', class: 'w-3 h-3 inline mr-1') %> <%= time_ago_in_words(job.published_at) %> ago</span>
                    <span><%= lucide_icon('users', class: 'w-3 h-3 inline mr-1') %> <%= pluralize(job.applications_count, 'application') %></span>
                  </div>
                  
                  <div class="flex space-x-2">
                    <% if user_signed_in? && current_user.candidate.present? %>
                      <% if job.has_applicant?(current_user.candidate) %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                          Applied
                        </span>
                      <% elsif job.can_be_applied_to? %>
                        <%= link_to "Apply", new_job_job_application_path(job), 
                            class: "inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 hover:bg-blue-200" %>
                      <% end %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Empty State -->
        <% if @jobs.empty? %>
          <div class="text-center py-12">
            <div class="mx-auto h-12 w-12 text-gray-400">
              <%= lucide_icon('search', class: 'h-12 w-12') %>
            </div>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No jobs found</h3>
            <p class="mt-1 text-sm text-gray-500">
              <% if @filters.values.any?(&:present?) %>
                Try adjusting your filters or search terms.
              <% else %>
                No jobs are currently available. Check back later!
              <% end %>
            </p>
          </div>
        <% end %>

        <!-- Pagination -->
        <div class="mt-8">
          <%= render "shared/pagination", pagy: @pagy %>
        </div>
      </div>
    </div>
  </div>
</div>
