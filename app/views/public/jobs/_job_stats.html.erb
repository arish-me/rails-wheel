<div class="space-y-3">
  <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
    <div class="flex items-center">
      <div class="w-7 h-7 bg-blue-100 rounded-lg flex items-center justify-center mr-2">
        <%= lucide_icon('users', class: 'w-3 h-3 text-blue-600') %>
      </div>
      <span class="text-sm text-gray-700 font-medium">Applications</span>
    </div>
    <span class="text-base font-bold text-gray-900"><%= @job.applications_count %></span>
  </div>

  <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
    <div class="flex items-center">
      <div class="w-7 h-7 bg-green-100 rounded-lg flex items-center justify-center mr-2">
        <%= lucide_icon('eye', class: 'w-3 h-3 text-green-600') %>
      </div>
      <span class="text-sm text-gray-700 font-medium">Views</span>
    </div>
    <span class="text-base font-bold text-gray-900"><%= @job.views_count %></span>
  </div>

  <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
    <div class="flex items-center">
      <div class="w-7 h-7 bg-purple-100 rounded-lg flex items-center justify-center mr-2">
        <%= lucide_icon('calendar', class: 'w-3 h-3 text-purple-600') %>
      </div>
      <span class="text-sm text-gray-700 font-medium">Posted</span>
    </div>
    <span class="text-xs font-medium text-gray-900"><%= time_ago_in_words(@job.published_at) %> ago</span>
  </div>

  <% if @job.expires_at.present? %>
    <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
      <div class="flex items-center">
        <div class="w-7 h-7 bg-yellow-100 rounded-lg flex items-center justify-center mr-2">
          <%= lucide_icon('clock', class: 'w-3 h-3 text-yellow-600') %>
        </div>
        <span class="text-sm text-gray-700 font-medium">Expires</span>
      </div>
      <span class="text-xs font-medium text-gray-900"><%= @job.expires_at.strftime('%B %d, %Y') %></span>
    </div>
  <% end %>
</div>
