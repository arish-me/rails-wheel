<div class="min-h-screen bg-gray-50 py-6">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Job Header -->
    <%= render 'job_header' %>

    <!-- Job Content -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Description -->
        <%= render 'job_content_section',
            title: 'Job Description',
            color: 'blue',
            content: @job.rich_text_description %>

        <!-- Requirements -->
        <% if @job.requirements.present? %>
          <%= render 'job_content_section',
              title: 'Requirements',
              color: 'green',
              content: @job.requirements_rich_text %>
        <% end %>

        <!-- Benefits -->
        <% if @job.benefits.present? %>
          <%= render 'job_content_section',
              title: 'Benefits & Perks',
              color: 'yellow',
              content: @job.benefits_rich_text %>
        <% end %>

        <% if @job.application_instructions.present? %>
          <%= render 'job_content_section',
              title: 'Application Instructions',
              color: 'orange',
              content: @job.application_instructions %>
        <% end %>

        <!-- Skills and Specializations -->
        <%= render 'skills_section' %>

        <!-- Related Jobs -->
        <%= render 'related_jobs' %>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Company Info -->
        <%= render 'sidebar_section', title: 'Company', color: 'gray' do %>
          <%= render 'company_info' %>
        <% end %>

        <!-- Job Stats -->
        <%= render 'sidebar_section', title: 'Job Statistics', color: 'indigo' do %>
          <%= render 'job_stats' %>
        <% end %>

        <!-- Share Job -->
        <%= render 'sidebar_section', title: 'Share This Job', color: 'orange' do %>
          <%= render 'share_job' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
