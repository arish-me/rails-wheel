<div class="min-h-screen bg-gray-50">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Job Header -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
      <div class="flex justify-between items-start mb-4">
        <div class="flex-1">
          <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @job.title %></h1>
          <p class="text-lg text-gray-600"><%= @job.company.name %></p>
        </div>

        <div class="flex space-x-2">
          <% if @job.featured? %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
              Featured
            </span>
          <% end %>
        </div>
      </div>

      <!-- Job Meta -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
        <div class="flex items-center text-gray-600">
          <%= lucide_icon('briefcase', class: 'w-5 h-5 mr-2') %>
          <span><%= @job.display_job_type %></span>
        </div>

        <div class="flex items-center text-gray-600">
          <%= lucide_icon('map-pin', class: 'w-5 h-5 mr-2') %>
          <span><%= @job.display_location.presence || 'Remote' %></span>
        </div>

        <div class="flex items-center text-gray-600">
          <%= lucide_icon('users', class: 'w-5 h-5 mr-2') %>
          <span><%= @job.display_experience_level %></span>
        </div>

        <% if @job.salary_min.present? || @job.salary_max.present? %>
          <div class="flex items-center text-gray-600">
            <%= lucide_icon('dollar-sign', class: 'w-5 h-5 mr-2') %>
            <span><%= @job.display_salary %></span>
          </div>
        <% end %>
      </div>

      <!-- Action Buttons -->
      <div class="flex space-x-3">
        <% if user_signed_in? && current_user.candidate.present? %>
          <% if @job.has_applicant?(current_user.candidate) %>
            <span class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600">
              <%= lucide_icon('check', class: 'w-4 h-4 mr-2') %>
              Already Applied
            </span>
          <% elsif @job.can_be_applied_to? %>
            <%= link_to new_job_job_application_path(@job),
                class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700" do %>
              <%= lucide_icon('send', class: 'w-4 h-4 mr-2') %>
              Apply Now
            <% end %>
          <% else %>
            <span class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-gray-100">
              Applications Closed
            </span>
          <% end %>
        <% else %>
          <%= link_to new_user_session_path,
              class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700" do %>
            <%= lucide_icon('log-in', class: 'w-4 h-4 mr-2') %>
            Sign In to Apply
          <% end %>
        <% end %>

        <%= link_to public_jobs_path,
            class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
          <%= lucide_icon('arrow-left', class: 'w-4 h-4 mr-2') %>
          Back to Jobs
        <% end %>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Description -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Job Description</h2>
          <div class="prose max-w-none">
            <%== @job.rich_text_description %>
          </div>
        </div>

        <!-- Requirements -->
        <% if @job.requirements.present? %>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Requirements</h2>
            <div class="prose max-w-none">
              <%== @job.requirements_rich_text %>
            </div>
          </div>
        <% end %>

        <!-- Benefits -->
        <% if @job.benefits.present? %>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Benefits & Perks</h2>
            <div class="prose max-w-none">
              <%== @job.benefits_rich_text %>
            </div>
          </div>
        <% end %>

        <!-- Related Jobs -->
        <% if @related_jobs.any? %>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Similar Jobs</h2>
            <div class="space-y-4">
              <% @related_jobs.each do |related_job| %>
                <div class="border border-gray-200 rounded-lg p-4 hover:bg-gray-50">
                  <div class="flex justify-between items-start">
                    <div class="flex-1">
                      <h3 class="font-medium text-gray-900">
                        <%= link_to related_job.title, public_job_path(related_job), class: "hover:text-blue-600" %>
                      </h3>
                      <p class="text-sm text-gray-600"><%= related_job.company.name %></p>
                      <div class="flex items-center space-x-4 mt-2 text-xs text-gray-500">
                        <span><%= lucide_icon('map-pin', class: 'w-3 h-3 inline mr-1') %> <%= related_job.display_location.presence || 'Remote' %></span>
                        <span><%= lucide_icon('briefcase', class: 'w-3 h-3 inline mr-1') %> <%= related_job.display_job_type %></span>
                      </div>
                    </div>

                    <% if user_signed_in? && current_user.candidate.present? %>
                      <% if related_job.has_applicant?(current_user.candidate) %>
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                          Applied
                        </span>
                      <% elsif related_job.can_be_applied_to? %>
                        <%= link_to "Apply", new_job_job_application_path(related_job),
                            class: "inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 hover:bg-blue-200" %>
                      <% end %>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Company Info -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Company</h3>
          <div class="flex items-center space-x-3 mb-4">
            <% if @job.company.avatar.attached? %>
              <%= image_tag @job.company.avatar, class: "w-12 h-12 rounded-full" %>
            <% else %>
              <div class="w-12 h-12 bg-gray-200 rounded-full flex items-center justify-center">
                <span class="text-gray-500 font-semibold"><%= @job.company.name.first %></span>
              </div>
            <% end %>
            <div>
              <p class="font-medium text-gray-900"><%= @job.company.name %></p>
              <% if @job.company.website.present? %>
                <%= link_to @job.company.website, @job.company.website,
                    target: "_blank",
                    class: "text-sm text-blue-600 hover:text-blue-800" %>
              <% end %>
            </div>
          </div>

          <% if false # @job.company.description.present? %>
            <p class="text-sm text-gray-600"><%= truncate(@job.company.description, length: 150) %></p>
          <% end %>
        </div>

        <!-- Job Stats -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Job Details</h3>
          <div class="space-y-3">
            <div class="flex justify-between">
              <span class="text-gray-600">Applications</span>
              <span class="font-medium"><%= @job.applications_count %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Views</span>
              <span class="font-medium"><%= @job.views_count %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Posted</span>
              <span class="font-medium"><%= time_ago_in_words(@job.published_at) %> ago</span>
            </div>
            <% if @job.expires_at.present? %>
              <div class="flex justify-between">
                <span class="text-gray-600">Expires</span>
                <span class="font-medium"><%= @job.expires_at.strftime('%B %d, %Y') %></span>
              </div>
            <% end %>
            <div class="flex justify-between">
              <span class="text-gray-600">Job Type</span>
              <span class="font-medium"><%= @job.display_job_type %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Experience</span>
              <span class="font-medium"><%= @job.display_experience_level %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Remote Policy</span>
              <span class="font-medium"><%= @job.display_remote_policy %></span>
            </div>
          </div>
        </div>

        <!-- Share Job -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Share This Job</h3>
          <div class="space-y-3">
            <%= link_to "https://www.linkedin.com/sharing/share-offsite/?url=#{CGI.escape(request.original_url)}",
                target: "_blank",
                class: "flex items-center justify-center w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
              <%= lucide_icon('linkedin', class: 'w-4 h-4 mr-2') %>
              Share on LinkedIn
            <% end %>

            <%= link_to "https://twitter.com/intent/tweet?text=#{CGI.escape("Check out this job: #{@job.title}")}&url=#{CGI.escape(request.original_url)}",
                target: "_blank",
                class: "flex items-center justify-center w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
              <%= lucide_icon('twitter', class: 'w-4 h-4 mr-2') %>
              Share on Twitter
            <% end %>

            <button onclick="navigator.clipboard.writeText(window.location.href)"
                class="flex items-center justify-center w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
              <%= lucide_icon('copy', class: 'w-4 h-4 mr-2') %>
              Copy Link
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
