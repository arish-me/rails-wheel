<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Job Header -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-8 mb-8">
      <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between mb-6">
        <div class="flex-1 mb-6 lg:mb-0">
          <div class="flex items-center mb-4">
            <% if @job.company.avatar.attached? %>
              <%= image_tag @job.company.avatar, class: "w-16 h-16 rounded-xl mr-4 shadow-sm" %>
            <% else %>
              <div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-blue-600 rounded-xl flex items-center justify-center shadow-sm mr-4">
                <span class="text-white text-md font-bold"><%= @job.company.name.first %></span>
              </div>
            <% end %>
            <div>
              <h1 class="text-xl font-bold text-gray-900 mb-2"><%= @job.title %></h1>
              <p class="text-md text-gray-600 font-medium"><%= @job.company.name %></p>
            </div>
          </div>
        </div>

        <div class="flex flex-col sm:flex-row items-start sm:items-center space-y-3 sm:space-y-0 sm:space-x-4">
          <% if @job.featured? %>
            <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold bg-yellow-100 text-yellow-800">
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
              Featured
            </span>
          <% end %>
        </div>
      </div>

      <!-- Job Meta -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-6 mb-8">
        <div class="flex items-center p-4 bg-gray-50 rounded-lg">
          <div class="flex-shrink-0 w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center mr-3">
            <%= lucide_icon('briefcase', class: 'w-5 h-5 text-blue-600') %>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-500">Job Type</p>
            <p class="text-base font-semibold text-gray-900"><%= @job.role_type&.titleize || 'Not specified' %></p>
          </div>
        </div>

        <div class="flex items-center p-4 bg-gray-50 rounded-lg">
          <div class="flex-shrink-0 w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center mr-3">
            <%= lucide_icon('map-pin', class: 'w-5 h-5 text-green-600') %>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-500">Location</p>
            <p class="text-base font-semibold text-gray-900">
              <% if @job.worldwide? %>
                <span class="inline-flex items-center">
                  <%= lucide_icon('globe', class: 'w-4 h-4 mr-1 text-blue-600') %>
                  Worldwide
                </span>
              <% else %>
                <%= @job.display_location.presence || 'Remote' %>
              <% end %>
            </p>
          </div>
        </div>

        <div class="flex items-center p-4 bg-gray-50 rounded-lg">
          <div class="flex-shrink-0 w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center mr-3">
            <%= lucide_icon('users', class: 'w-5 h-5 text-purple-600') %>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-500">Experience</p>
            <p class="text-base font-semibold text-gray-900"><%= @job.display_experience_level %></p>
          </div>
        </div>

        <div class="flex items-center p-4 bg-gray-50 rounded-lg">
          <div class="flex-shrink-0 w-10 h-10 bg-indigo-100 rounded-lg flex items-center justify-center mr-3">
            <%= lucide_icon('wifi', class: 'w-5 h-5 text-indigo-600') %>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-500">Remote Policy</p>
            <p class="text-base font-semibold text-gray-900"><%= @job.remote_policy&.titleize || 'Not specified' %></p>
          </div>
        </div>

        <% if @job.salary_min.present? || @job.salary_max.present? %>
          <div class="flex items-center p-4 bg-gray-50 rounded-lg">
            <div class="flex-shrink-0 w-10 h-10 bg-yellow-100 rounded-lg flex items-center justify-center mr-3">
              <%= lucide_icon('dollar-sign', class: 'w-5 h-5 text-yellow-600') %>
            </div>
            <div>
              <p class="text-sm font-medium text-gray-500">Salary</p>
              <p class="text-base font-semibold text-gray-900"><%= @job.display_salary %></p>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row items-start sm:items-center space-y-3 sm:space-y-0 sm:space-x-4">
        <% if user_signed_in? && current_user.candidate.present? %>
          <% if @job.has_applicant?(current_user.candidate) %>
            <span class="inline-flex items-center px-6 py-3 border border-transparent rounded-lg shadow-sm text-base font-semibold text-white bg-green-600">
              <%= lucide_icon('check', class: 'w-5 h-5 mr-2') %>
              Already Applied
            </span>

            <%= link_to job_job_application_path(@job,  @job.job_applications_candidate(current_user.candidate)),
                class: "inline-flex items-center px-6 py-3 border border-transparent rounded-lg shadow-sm text-base font-semibold text-white bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200" do %>
              <%= lucide_icon('send', class: 'w-5 h-5 mr-2') %>
              View Your Application
            <% end %>
          <% elsif @job.can_be_applied_to? %>
            <%= link_to new_job_job_application_path(@job),
                class: "inline-flex items-center px-6 py-3 border border-transparent rounded-lg shadow-sm text-base font-semibold text-white bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200" do %>
              <%= lucide_icon('send', class: 'w-5 h-5 mr-2') %>
              Apply Now
            <% end %>
          <% else %>
            <span class="inline-flex items-center px-6 py-3 border border-gray-300 rounded-lg shadow-sm text-base font-medium text-gray-700 bg-gray-100">
              <%= lucide_icon('x-circle', class: 'w-5 h-5 mr-2') %>
              Applications Closed
            </span>
          <% end %>
        <% else %>
          <%= link_to new_user_session_path,
              class: "inline-flex items-center px-6 py-3 border border-transparent rounded-lg shadow-sm text-base font-semibold text-white bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200" do %>
            <%= lucide_icon('log-in', class: 'w-5 h-5 mr-2') %>
            Sign In to Apply
          <% end %>
        <% end %>

        <%= link_to public_jobs_path,
            class: "inline-flex items-center px-6 py-3 border border-gray-300 rounded-lg shadow-sm text-base font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200" do %>
          <%= lucide_icon('arrow-left', class: 'w-5 h-5 mr-2') %>
          Back to Jobs
        <% end %>
      </div>
    </div>

    <!-- Job Content -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-8">
        <!-- Description -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <div class="px-6 py-4 bg-gradient-to-r from-blue-50 to-indigo-50 border-b border-gray-200">
            <h2 class="text-xl font-semibold text-gray-900">Job Description</h2>
          </div>
          <div class="p-6">
            <div class="prose max-w-none">
              <%== @job.rich_text_description %>
            </div>
          </div>
        </div>

        <!-- Requirements -->
        <% if @job.requirements.present? %>
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
            <div class="px-6 py-4 bg-gradient-to-r from-green-50 to-emerald-50 border-b border-gray-200">
              <h2 class="text-xl font-semibold text-gray-900">Requirements</h2>
            </div>
            <div class="p-6">
              <div class="prose max-w-none">
                <%== @job.requirements_rich_text %>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Benefits -->
        <% if @job.benefits.present? %>
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
            <div class="px-6 py-4 bg-gradient-to-r from-yellow-50 to-amber-50 border-b border-gray-200">
              <h2 class="text-xl font-semibold text-gray-900">Benefits & Perks</h2>
            </div>
            <div class="p-6">
              <div class="prose max-w-none">
                <%== @job.benefits_rich_text %>
              </div>
            </div>
          </div>
        <% end %>

        <% if @job.application_instructions.present? %>
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
            <div class="px-6 py-4 bg-gradient-to-r from-orange-50 to-red-50 border-b border-gray-200">
              <h3 class="text-lg font-semibold text-gray-900">Application Instructions</h3>
            </div>
            <div class="p-6">
              <div class="prose prose-sm max-w-none break-words">
                <%== @job.application_instructions %>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Skills and Specializations -->
        <% if @job.skills.any? || @job.candidate_roles.any? %>
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
            <div class="px-6 py-4 bg-gradient-to-r from-purple-50 to-pink-50 border-b border-gray-200">
              <h2 class="text-xl font-semibold text-gray-900">Skills & Specializations</h2>
            </div>
            <div class="p-6">
              <% if @job.skills.any? %>
                <div class="mb-6">
                  <h3 class="text-lg font-semibold text-gray-900 mb-3">Required Skills</h3>
                  <div class="flex flex-wrap gap-2">
                    <% @job.skills.each do |skill| %>
                      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                        <%= skill.name %>
                      </span>
                    <% end %>
                  </div>
                </div>
              <% end %>

              <% if @job.candidate_roles.any? %>
                <div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-3">Role Specializations</h3>
                  <div class="flex flex-wrap gap-2">
                    <% @job.candidate_roles.each do |role| %>
                      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                        <%= role.name %>
                      </span>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Related Jobs -->
        <% if @related_jobs.any? %>
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
            <div class="px-6 py-4 bg-gradient-to-r from-emerald-50 to-teal-50 border-b border-gray-200">
              <h2 class="text-xl font-semibold text-gray-900">Similar Jobs</h2>
            </div>
            <div class="p-6">
              <div class="space-y-4">
                <% @related_jobs.each do |related_job| %>
                  <div class="border border-gray-200 rounded-lg p-4 hover:bg-gray-50 transition-colors duration-200">
                    <div class="flex justify-between items-start">
                      <div class="flex-1">
                        <h3 class="font-semibold text-gray-900 mb-1">
                          <%= link_to related_job.title, public_job_path(related_job), class: "hover:text-blue-600 transition-colors duration-200" %>
                        </h3>
                        <p class="text-sm text-gray-600 mb-2"><%= related_job.company.name %></p>
                        <div class="flex items-center space-x-4 text-xs text-gray-500">
                          <span class="flex items-center">
                            <%= lucide_icon('map-pin', class: 'w-3 h-3 mr-1') %>
                            <% if related_job.worldwide? %>
                              <span class="inline-flex items-center">
                                <%= lucide_icon('globe', class: 'w-3 h-3 mr-1 text-blue-600') %>
                                Worldwide
                              </span>
                            <% else %>
                              <%= related_job.display_location.presence || 'Remote' %>
                            <% end %>
                          </span>
                          <span class="flex items-center">
                            <%= lucide_icon('briefcase', class: 'w-3 h-3 mr-1') %>
                            <%= related_job.role_type&.titleize || 'Not specified' %>
                          </span>
                        </div>
                      </div>

                      <div class="ml-4">
                        <% if user_signed_in? && current_user.candidate.present? %>
                          <% if related_job.has_applicant?(current_user.candidate) %>
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                              Applied
                            </span>
                          <% elsif related_job.can_be_applied_to? %>
                            <%= link_to "Apply", new_job_job_application_path(related_job),
                                class: "inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 hover:bg-blue-200 transition-colors duration-200" %>
                          <% end %>
                        <% end %>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Sidebar -->
      <div class="space-y-8">
        <!-- Company Info -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <div class="px-6 py-4 bg-gradient-to-r from-gray-50 to-gray-100 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900">Company</h3>
          </div>
          <div class="p-6">
            <div class="flex items-center space-x-4 mb-4">
              <% if @job.company.avatar.attached? %>
                <%= image_tag @job.company.avatar, class: "w-16 h-16 rounded-xl shadow-sm" %>
              <% else %>
                <div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-blue-600 rounded-xl flex items-center justify-center shadow-sm">
                  <span class="text-white text-xl font-bold"><%= @job.company.name.first %></span>
                </div>
              <% end %>
              <div>
                <p class="font-semibold text-gray-900 text-lg"><%= @job.company.name %></p>
                <% if @job.company.website.present? %>
                  <a href="<%= @job.company.website %>" target="_blank" class="text-blue-600 hover:text-blue-800 text-sm transition-colors duration-200">
                    <%= @job.company.website %>
                  </a>
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <!-- Job Stats -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <div class="px-6 py-4 bg-gradient-to-r from-indigo-50 to-blue-50 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900">Job Statistics</h3>
          </div>
          <div class="p-6">
            <div class="space-y-4">
              <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                <div class="flex items-center">
                  <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center mr-3">
                    <%= lucide_icon('users', class: 'w-4 h-4 text-blue-600') %>
                  </div>
                  <span class="text-gray-700 font-medium">Applications</span>
                </div>
                <span class="text-lg font-bold text-gray-900"><%= @job.applications_count %></span>
              </div>

              <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                <div class="flex items-center">
                  <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center mr-3">
                    <%= lucide_icon('eye', class: 'w-4 h-4 text-green-600') %>
                  </div>
                  <span class="text-gray-700 font-medium">Views</span>
                </div>
                <span class="text-lg font-bold text-gray-900"><%= @job.views_count %></span>
              </div>

              <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                <div class="flex items-center">
                  <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center mr-3">
                    <%= lucide_icon('calendar', class: 'w-4 h-4 text-purple-600') %>
                  </div>
                  <span class="text-gray-700 font-medium">Posted</span>
                </div>
                <span class="text-sm font-medium text-gray-900"><%= time_ago_in_words(@job.published_at) %> ago</span>
              </div>

              <% if @job.expires_at.present? %>
                <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                  <div class="flex items-center">
                    <div class="w-8 h-8 bg-yellow-100 rounded-lg flex items-center justify-center mr-3">
                      <%= lucide_icon('clock', class: 'w-4 h-4 text-yellow-600') %>
                    </div>
                    <span class="text-gray-700 font-medium">Expires</span>
                  </div>
                  <span class="text-sm font-medium text-gray-900"><%= @job.expires_at.strftime('%B %d, %Y') %></span>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Share Job -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <div class="px-6 py-4 bg-gradient-to-r from-orange-50 to-red-50 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900">Share This Job</h3>
          </div>
          <div class="p-6">
            <div class="space-y-3">
              <%= link_to "https://www.linkedin.com/sharing/share-offsite/?url=#{CGI.escape(request.original_url)}",
                  target: "_blank",
                  class: "flex items-center justify-center w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200" do %>
                <%= lucide_icon('linkedin', class: 'w-4 h-4 mr-2') %>
                Share on LinkedIn
              <% end %>

              <%= link_to "https://twitter.com/intent/tweet?text=#{CGI.escape("Check out this job: #{@job.title}")}&url=#{CGI.escape(request.original_url)}",
                  target: "_blank",
                  class: "flex items-center justify-center w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200" do %>
                <%= lucide_icon('twitter', class: 'w-4 h-4 mr-2') %>
                Share on Twitter
              <% end %>

              <button onclick="navigator.clipboard.writeText(window.location.href)"
                  class="flex items-center justify-center w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200">
                <%= lucide_icon('copy', class: 'w-4 h-4 mr-2') %>
                Copy Link
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
