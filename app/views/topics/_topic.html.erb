<div id="<%= dom_id topic %>" class="mx-auto md:w-2/3 w-full flex flex-col">
  <!-- Topic Heading -->
  <h1 class="text-2xl flex justify-center font-bold text-gray-900 mb-6">
    <%= "#{topic.position}. #{topic.heading}" %>
    <%= topic.content %>
  </h1>

  <!-- Chapters List -->
  <div class="space-y-4">
    <% topic.chapters.each_with_index do |chapter, index| %>
      <div class="flex items-center justify-between rounded-lg border border-gray-300 px-6 py-4 shadow-sm bg-white">
        <!-- Position and Lesson Badge -->
        <div class="flex items-center">
          <span class="flex items-center justify-center w-10 h-10 rounded-full bg-gray-100 text-gray-500 font-semibold mr-4">
            <%= index + 1 %>
          </span>
          <span class="text-sm bg-green-50 text-green-600 font-medium px-3 py-1 rounded-full">Lesson</span>
        </div>

        <!-- Chapter Name -->
        <div class="ml-4 flex-1">
          <%= link_to chapter.name, course_topic_chapter_path(@course, topic, chapter), class: "text-gray-900 font-medium hover:underline" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
