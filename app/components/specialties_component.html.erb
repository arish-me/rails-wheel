<div>
  <h2 class="text-sm font-medium text-gray-500"><%= t("#{title}") %></h2>
  <div class="mt-3 space-y-3">
    <% if specialties.any? %>
      <div class="flex flex-wrap items-start">
        <% specialties.each do |specialty| %>
          <div class="mr-4 mb-2">
            <%= render BadgeComponent.new(specialty.name, color: "gray") %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>